<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="630sp"
        android:layout_gravity="bottom|center"
        android:orientation="vertical"
        android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100sp"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:background="#BFE8C64B"
        android:gravity="top">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Link a PayPal Account"
                android:textSize="22sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#DCDCDC"
                android:background="#3B3B3B"
                android:layout_marginTop="70sp"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_below="@+id/text1"
                android:layout_centerInParent="true"
                android:src="@drawable/paypal_small"/>

            <EditText
                android:id="@+id/pay_email"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="15sp"
                android:paddingLeft="12sp"
                android:textSize="16sp"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/image"
                android:layout_marginRight="10sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Email"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/pay_pass"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingLeft="12sp"
                android:textSize="16sp"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/pay_email"
                android:layout_marginRight="10sp"
                android:textColor="#000000"
                android:layout_marginTop="20sp"
                android:textColorHint="#000000"
                android:hint="Password"
                android:background="@drawable/white_edit_bg"/>

            <Button
                android:id="@+id/pay_save"
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:text="SAVE LOG IN"
                android:gravity="center"
                android:layout_below="@+id/pay_pass"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/gray_box"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/pay_save"
                android:layout_marginTop="20sp"
                android:background="#BF178487">

                <TextView
                    android:id="@+id/pay_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:text="SIGNUP for"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/paypal_small"/>

            </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </ImageView>

        </RelativeLayout>
            </LinearLayout>
        </ScrollView>

</RelativeLayout>