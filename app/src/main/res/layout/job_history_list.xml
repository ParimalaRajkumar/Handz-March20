<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#BFE8C64B"
    android:alpha="0.85"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/re2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:padding="3dp"
                android:src="@drawable/default_profile"
                android:background="@drawable/image_border" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/job_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/employer_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/employee_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/rehire_lay"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/rehire_border"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="Rehire "
                    android:paddingLeft="10sp"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:text=" ! !"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="15sp"
        android:orientation="horizontal"
        android:layout_marginBottom="15sp"
        android:layout_marginRight="10sp"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/job_detail_btn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_margin="7dp"
                android:background="@drawable/job_detail_icon"
                android:textSize="16sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/message_btn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_margin="7dp"
                android:background="@drawable/message_icon"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/message_count"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:adjustViewBounds="true"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="center"
                android:scaleType="fitStart"
                android:layout_gravity="top|right"
                android:background="@drawable/circle_shape" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/leave_rating_btn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_margin="7dp"
                android:background="@drawable/leave_rating_icon"
                android:textSize="16sp" />

            <Button
                android:id="@+id/edit_rating_btn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_margin="7dp"
                android:background="@drawable/editrating"
                android:textSize="16sp" />

            <Button
                android:id="@+id/leave_comment_btn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_margin="7dp"
                android:background="@drawable/leave_comment_icon"
                android:textSize="16sp" />

            <Button
                android:id="@+id/edit_comment_btn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_margin="7dp"
                android:background="@drawable/edit_comment_icon"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rating_count"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="top|right"
                android:adjustViewBounds="true"
                android:paddingTop="-10dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="center"
                android:scaleType="fitStart"
                android:background="@drawable/circle_shape" />

        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

</LinearLayout>