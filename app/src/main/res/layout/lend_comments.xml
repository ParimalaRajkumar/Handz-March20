<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <RelativeLayout
                        android:id="@+id/rela1"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="20sp"
                        android:background="#BF178487">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="180sp"
                            android:layout_height="40sp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="20sp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <RelativeLayout
                            android:id="@+id/rating"
                            android:layout_width="180sp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/text1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5sp"
                                android:layout_toLeftOf="@+id/text3"
                                android:text="Rating: "
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <ImageView
                                android:layout_width="40sp"
                                android:layout_height="45sp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10sp"
                                android:layout_toLeftOf="@+id/text2"
                                android:background="@drawable/starnew" />

                            <TextView
                                android:id="@+id/text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="4.5"
                                android:textColor="#000000"
                                android:textSize="22sp" />

                        </RelativeLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_marginLeft="20sp">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:padding="4dp"
                            android:src="@drawable/default_profile"
                            android:background="@drawable/image_border" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:background="#BFE8C64B">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:text="COMMENTS !"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:text="Be Honest, Be Respectful, Be Professional"
                        android:textColor="#000000"
                        android:textAllCaps="false"
                        android:textSize="16sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="140sp"
                    android:background="#BF178487">


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="140sp"
                    android:background="#BFB5B0AF"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="THANK YOU!"
                        android:layout_marginRight="20sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="10sp"
                        android:textSize="25sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130sp"
                    android:background="#BFE8C64B">

                    <RelativeLayout
                        android:id="@+id/lay1"
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="#006D70">

                        <ImageView
                            android:layout_width="160sp"
                            android:layout_height="90sp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3sp"
                            android:src="@drawable/handz_text"/>


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom"
                    android:layout_marginBottom="30sp"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/next1"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_gray"
                        android:text="POST"
                        android:padding="5sp"
                        android:textColor="#DCDCDC"
                        android:textSize="24sp"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:paddingTop="10sp"
            android:gravity="top"
            android:textColorHint="#000000"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/border"
            android:hint="Place comments here.."
            android:paddingLeft="15sp" />
    </FrameLayout>

</LinearLayout>