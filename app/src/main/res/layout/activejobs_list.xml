<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#C8A854"
    android:alpha="0.85"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/re2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:src="@drawable/default_profile"
                android:padding="4dp"
                android:background="@drawable/image_border" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/job_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/employer_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/employee_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:text="you hired  "
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:text=" ! !"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- <TextView
                 android:id="@+id/text4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:textAllCaps="true"
                 android:visibility="invisible"
                 android:textColor="#000000"
                 android:textSize="16sp" />-->


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="15sp"
        android:orientation="horizontal"
        android:layout_marginBottom="15sp"
        android:layout_marginRight="10sp"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/job_detail_btn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_margin="7dp"
                android:background="@drawable/job_detail_gray"
                android:textSize="16sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/message_btn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_margin="7dp"
                android:background="@drawable/message_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/message_count"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:adjustViewBounds="true"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="center"
                android:translationZ="5dp"
                android:scaleType="fitStart"
                android:layout_gravity="top|right"
                android:background="@drawable/circle_shape" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_margin="7dp"
                android:background="@drawable/make_payment_gray"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/pay_count"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:adjustViewBounds="true"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="center"
                android:translationZ="5dp"
                android:scaleType="fitStart"
                android:layout_gravity="top|right"
                android:background="@drawable/circle_shape" />

        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

</LinearLayout>