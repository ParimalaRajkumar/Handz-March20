<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d4d4d">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="630sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="140sp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top|center"
                    android:background="#AE944F"
                    android:gravity="top">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your newly created job :"
                        android:layout_marginTop="50sp"
                        android:layout_marginLeft="10sp"
                        android:textSize="20sp"
                        android:textColor="#000000"/>


                    <TextView
                        android:id="@+id/bt1"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:textSize="22sp"
                        android:layout_below="@+id/text1"
                        android:layout_marginTop="10sp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textColor="#DCDCDC"
                        android:background="#4D4D4D"/>

                    <RelativeLayout
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:descendantFocusability="beforeDescendants"
                        android:layout_below="@+id/bt1">

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="12sp"
                        android:paddingLeft="12sp"
                        android:textSize="16sp"
                        android:layout_marginTop="10sp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:hint="Address of Job Site"
                        android:layout_weight="1"
                        android:background="@drawable/shape"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/address"
                        android:layout_marginTop="10sp"
                        android:weightSum="3">

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_marginLeft="12sp"
                            android:paddingLeft="12sp"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:hint="City or Town"
                            android:layout_weight="1"
                            android:background="@drawable/shape"/>

                        <EditText
                            android:id="@+id/state"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_marginLeft="10sp"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:hint="ST"
                            android:background="@drawable/shape"
                            android:layout_weight="1" />

                        <EditText
                            android:id="@+id/zipcode"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="12sp"
                            android:layout_weight="1"
                            android:background="@drawable/shape"
                            android:hint="ZipCode"
                            android:inputType="number"
                            android:paddingLeft="12sp"
                            android:paddingRight="5sp"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="16sp" />

                    </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lay"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:orientation="vertical"
                        android:layout_below="@+id/layout2"
                        android:gravity="center"
                        android:layout_marginTop="15sp"
                        android:paddingBottom="5sp"
                        android:background="#538A70">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/checkBox1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5sp"
                            android:text="OR"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:gravity="center"/>

                        <CheckBox
                            android:id="@+id/checkBox1"
                            android:layout_marginTop="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Use Current Location"
                            android:textSize="18sp"
                            android:paddingLeft="10sp"
                            android:button="@drawable/custom_checkbox"
                            android:gravity="center_vertical"
                            android:textColor="#000000"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130sp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginTop="15sp"
                        android:layout_below="@+id/lay"
                        android:gravity="center"
                        android:background="#4D4D4D">

                            <CheckBox
                                android:id="@+id/checkBox2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:button="@drawable/custom_checkbox"
                                android:paddingLeft="5sp"
                                android:textStyle="bold"
                                android:text=" I would like to post my &quot;work site&quot;\n address for the particular job."
                                android:textColor="#DCDCDC"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/features"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/checkBox2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10sp"
                                android:text="NOT SURE?"
                                android:textColor="#DCDCDC"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:gravity="center"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_below="@id/features"
                                android:weightSum="2">

                            <TextView
                                android:layout_marginTop="5sp"
                                android:id="@+id/pros"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PROS"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textColor="#29988E"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/cons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CONS"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_marginTop="5sp"
                                android:textColor="#E8C64B"
                                android:textSize="20sp"/>

                            </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="30sp"
                    android:src="@drawable/back_img"
                    android:layout_alignTop="@+id/logo"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="26dp" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_marginLeft="6sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/logo"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <Button
                        android:id="@+id/next"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:textAllCaps="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/next_arrow"
                        android:layout_gravity="right"
                        android:layout_marginRight="15sp"/>`

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/handz"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>