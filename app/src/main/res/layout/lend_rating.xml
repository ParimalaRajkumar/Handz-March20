<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d4d4d">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <RelativeLayout
                    android:id="@+id/rela1"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="30sp"
                    android:background="#BF178487">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="180sp"
                        android:layout_height="40sp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:textColor="#000000"
                        android:textSize="26sp" />

                    <RelativeLayout
                        android:id="@+id/rating"
                        android:layout_width="180sp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/text1"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5sp"
                            android:layout_toLeftOf="@+id/text3"
                            android:text="Rating: "
                            android:textColor="#000000"
                            android:textSize="22sp"/>

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5sp"
                            android:layout_toLeftOf="@+id/text2"
                            android:background="@drawable/starnew" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    android:layout_marginLeft="10sp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:padding="4dp"
                        android:src="@drawable/default_profile"
                        android:background="@drawable/image_border" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:background="#BFE8C64B"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="How was your boss?"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:background="#BF178487">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:text="Employer was fair and respectful..."
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/ratingBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:scaleX="0.9"
                    android:stepSize="1"
                    style="@style/CustomRatingBar"
                    android:scaleY="0.8"
                    android:layout_below="@+id/t1"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BFB5B0AF">

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Amount of work matched the scope of work..."
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:layout_marginTop="10sp"
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:scaleX="0.9"
                    android:stepSize="1"
                    style="@style/CustomRatingBar"
                    android:scaleY="0.8"
                    android:layout_below="@+id/t2"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:background="#BF178487">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="I felt safe at all times on the work site..."
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:layout_marginTop="10sp"
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/ratingBar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:scaleX="0.9"
                    android:stepSize="1"
                    style="@style/CustomRatingBar"
                    android:scaleY="0.9"
                    android:layout_below="@+id/t3"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:background="#BFB5B0AF">

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Employer paid me in a timely manner..."
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:layout_marginTop="10sp"
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/ratingBar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:scaleX="0.9"
                    android:stepSize="1"
                    style="@style/CustomRatingBar"
                    android:scaleY="0.9"
                    android:layout_below="@+id/t4"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:background="#BF178487">

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:text="I'd work for this person again..."
                    android:textColor="#000000"
                    android:layout_marginTop="10sp"
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/ratingBar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:scaleX="0.9"
                    android:stepSize="1"
                    android:scaleY="0.9"
                    style="@style/CustomRatingBar"
                    android:layout_below="@+id/t5"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="30sp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_marginLeft="20sp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/handz"/>

                <Button
                    android:id="@+id/next"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:textAllCaps="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/next_arrow"
                    android:layout_gravity="right"
                    android:layout_marginRight="15sp"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
