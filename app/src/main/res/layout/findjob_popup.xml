<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#0E7B7E"
    android:alpha="0.7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lin_job_view">


    <ImageView
        android:id="@+id/img_close"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_gravity="right"
        android:src="@drawable/exit" />

    <LinearLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/re2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:background="@drawable/default_profile" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:background="@drawable/image_border" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
           >

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:src="@drawable/starnew" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/img3"
                android:text="Rating:"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="12sp"
                android:layout_toRightOf="@+id/txt1"
                android:text="4.5"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

        </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/txt_jobcat"
                android:paddingTop="10dp"
                android:textAllCaps="true"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="WHEN:M,W,F 4:00PM-6:30PM"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:id="@+id/txt_when"
            android:textStyle="bold"
            android:textSize="14sp">
        </TextView>
           <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:id="@+id/txt_obj"
               android:visibility="gone">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="WHEN:M,W,F 4:00PM-6:30PM"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:id="@+id/txt_duration">

        </TextView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="PAY:$12 per hour"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:id="@+id/txt_amount"
            android:paddingBottom="20dp">

        </TextView>

    </LinearLayout>

</LinearLayout>