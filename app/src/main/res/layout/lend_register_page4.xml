<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="550sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1" >

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="120sp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top|center"
                    android:background="#AE944F"
                    android:gravity="top">

                    <LinearLayout
                        android:id="@+id/li"
                        android:layout_width="match_parent"
                        android:layout_height="300sp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:background="#4D4D4D">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Welcome to the Handz Family!"
                            android:textColor="#DCDCDC"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginTop="20sp">

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="Thank you for trying us out. We're glad to have you here!"
                                android:textColor="#DCDCDC"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_marginTop="20sp"
                                android:text="Whether you need a hand or are willing to lend a hand, we hope you have a great experience using our app!"
                                android:textColor="#DCDCDC"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/text4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="20sp"
                                android:textStyle="bold"
                                android:text="Sometimes you just need a hand and sometimes you need job flexibility!"
                                android:textColor="#DCDCDC"
                                android:textSize="16sp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click &quot;Create Profile&quot; to get started!"
                            android:textColor="#DCDCDC"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="20sp" />

                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_marginLeft="6sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/logo"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|center"
                    android:gravity="center">

                    <Button
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#DCDCDC"
                        android:background="@drawable/border_gray"
                        android:text="Create Profile"
                        android:paddingLeft="15sp"
                        android:layout_marginTop="20sp"
                        android:paddingTop="5sp"
                        android:paddingRight="15sp"
                        android:paddingBottom="5sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="30sp"/>

                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="50sp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/handz"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>

