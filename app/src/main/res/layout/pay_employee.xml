<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="640sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#4D4D4D"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="top|center"
                android:layout_marginTop="130sp"
                android:background="#AB954C"
                android:gravity="top">


                <RelativeLayout
                    android:id="@+id/relay"
                    android:layout_width="match_parent"
                    android:layout_height="85sp"
                    android:layout_marginTop="70sp"
                    android:background="#00888C">

                   <!-- <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:textSize="26sp"
                        android:text="Pay"
                        android:layout_marginLeft="20sp"
                        android:gravity="center_vertical"
                        android:textAllCaps="true" />-->


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:layout_marginRight="130sp"
                        android:layout_toRightOf="@+id/text1"
                        android:textSize="26sp"
                        android:layout_marginLeft="10sp"
                        android:gravity="center_vertical"
                        android:textAllCaps="true" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="110sp"
                    android:layout_height="110sp"
                    android:layout_marginRight="56dp"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="57dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="110sp"
                    android:layout_height="110sp"
                    android:background="@drawable/image_border"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_alignLeft="@+id/imageView"
                    android:layout_alignStart="@+id/imageView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/relay">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="25sp">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:text="Transaction Date :"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/transaction_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt1"
                            android:textSize="18sp"
                            android:layout_marginLeft="10sp"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Job Payout :"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="63sp"
                            android:textStyle="bold|italic"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/job_payout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="5sp"
                            android:textSize="22sp"
                            android:textColor="#000000"
                            android:background="@null" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginTop="20sp">

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="45sp"
                            android:text="Handz for Hire Flat\nService Fee :"
                            android:textAllCaps="false"
                            android:layout_gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textStyle="bold|italic"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30sp"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/service_fee"
                            android:layout_width="120sp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="5sp"
                            android:text="1.00"
                            android:textColor="#000000"
                            android:background="@null" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp">

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tip(Optional) :"
                            android:textColor="#000000"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/info1"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/info_icon"
                            android:layout_marginLeft="10sp" />

                        <LinearLayout
                            android:layout_width="120sp"
                            android:layout_height="35sp"
                            android:layout_marginLeft="30sp"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@drawable/shape">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$"
                                android:textSize="22sp"
                                android:textStyle="bold|italic"
                                android:paddingLeft="10sp"
                                android:textAllCaps="true"
                                android:textColor="#000000"
                                android:layout_gravity="center" />

                            <EditText
                                android:id="@+id/tip"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="10sp"
                                android:inputType="numberDecimal"
                                android:textColor="#000000"
                                android:text="0.00"
                                android:textSize="22sp"
                                android:background="@null" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paypal Merchant\nProcessing Fee:"
                            android:textColor="#000000"
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:layout_marginLeft="20sp" />

                        <ImageView
                            android:id="@+id/info2"
                            android:layout_toRightOf="@+id/te1"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:background="@drawable/info_icon"
                            android:layout_marginTop="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="22sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20sp"
                            android:textStyle="bold|italic"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/processing_fee"
                            android:layout_width="120sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="22sp"
                            android:paddingLeft="5sp"
                            android:textColor="#000000"
                            android:background="@android:color/transparent" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:layout_marginTop="15sp"
                        android:background="#000000" />

                    <RelativeLayout
                        android:id="@+id/ree"
                        android:layout_width="match_parent"
                        android:layout_height="50sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="40sp"
                            android:layout_marginRight="20sp"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/text7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total :"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_weight="1"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$"
                                android:textSize="22sp"
                                android:textStyle="bold|italic"
                                android:textColor="#000000"/>

                            <TextView
                                android:id="@+id/total"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_marginLeft="10sp"
                                android:layout_toRightOf="@+id/txt1"
                                android:textSize="22sp"
                                android:textColor="#000000" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/payment_btn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:textAllCaps="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/payamount"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:layout_gravity="right" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/logo">

            </ImageView>

        </RelativeLayout>

        <TextView
            android:layout_width="130sp"
            android:layout_height="40sp"
            android:layout_marginTop="20sp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/handz"/>

    </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
