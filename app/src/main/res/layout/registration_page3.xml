<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100sp"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:background="#AE944F"
        android:gravity="top">

            <EditText
                android:id="@+id/password"
                android:layout_marginLeft="12sp"
                android:layout_width="match_parent"
                android:textColorHint="#000000"
                android:layout_height="40sp"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:layout_marginRight="12sp"
                android:hint="Password(8-30 Characters...)"
                android:paddingLeft="12sp"
                android:layout_marginTop="70sp"
                android:background="@drawable/shape" />

            <EditText
                android:id="@+id/retype_password"
                android:layout_marginLeft="12sp"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:layout_below="@+id/password"
                android:textColorHint="#000000"
                android:layout_marginRight="12sp"
                android:hint="Re-type Password"
                android:paddingLeft="12sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/shape" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </ImageView>

                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_below="@+id/retype_password"
                android:background="#4D4D4D">

                <RelativeLayout
                    android:layout_width="300sp"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingLeft="10sp"
                        android:textStyle="bold"
                        android:textColor="#DCDCDC"
                        android:button="@drawable/custom_checkbox"
                        android:layout_marginRight="10sp"
                        android:text="May we have permission to access \nfeatures on your phone?" />

                    <TextView
                        android:id="@+id/features"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What features?"
                        android:layout_below="@+id/checkBox1"
                        android:layout_marginLeft="36sp"
                        android:textSize="16sp"
                        android:textColor="#3380ff"/>

                    <!-- <View
                         android:layout_width="100sp"
                         android:layout_height="2dp"
                         android:layout_below="@+id/features"
                         android:layout_marginLeft="36sp"
                         android:background="#3380ff"/>-->

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp">

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:textStyle="bold"
                        android:textColor="#DCDCDC"
                        android:button="@drawable/custom_checkbox"
                        android:paddingLeft="10sp"
                        android:textSize="16sp"
                        android:text=" Check here to indicate that you \n have read and agree with the"
                        android:checked="false" />

                    <TextView
                        android:id="@+id/handz_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkBox2"
                        android:text="Handz for Hire terms and Conditions."
                        android:layout_marginLeft="36sp"
                        android:textSize="16sp"
                        android:textColor="#3380ff"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp">

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingLeft="10sp"
                    android:textStyle="bold"
                    android:textColor="#DCDCDC"
                    android:button="@drawable/custom_checkbox"
                    android:layout_marginRight="10sp"
                    android:text="I acknowledge that, in accordance \nwith Federal Law, I must be 18 years of age or older in order to create a job and hire a person." />
</RelativeLayout>

                <RelativeLayout
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp">

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingLeft="10sp"
                    android:textStyle="bold"
                    android:button="@drawable/custom_checkbox"
                    android:textColor="#DCDCDC"
                    android:layout_marginRight="10sp"
                    android:text="I agree and certify that I am a person legally within the United States and should I desire to find work using Handz for Hire, I am of legal working age according to Federal and State laws." />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_marginTop="10sp"
                    android:background="#AE944F"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_marginLeft="20sp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/handz"/>

                <Button
                    android:id="@+id/next1"
                    android:layout_width="50sp"
                    android:layout_height="40sp"
                    android:textAllCaps="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/next_arrow"
                    android:layout_gravity="right"
                    android:layout_marginRight="15sp"/>

            </RelativeLayout>


            <WebView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/web_url"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>