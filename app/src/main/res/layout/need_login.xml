<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#4d4d4d"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="12sp"
                android:layout_marginRight="12sp"
                android:layout_marginTop="40sp"
                android:textSize="18sp"
                android:textColorHint="#000000"
                android:hint="Email"
                android:paddingLeft="15sp"
                android:background="@drawable/shape" />

            <EditText
                android:hint="Password"
                android:id="@+id/login_pass"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:textSize="18sp"
                android:textColorHint="#000000"
                android:inputType="textPassword"
                android:layout_marginLeft="12sp"
                android:layout_marginRight="12sp"
                android:layout_marginTop="20sp"
                android:paddingLeft="15sp"
                android:background="@drawable/shape" />

            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_gray"
                android:layout_marginTop="20sp"
                android:textColor="#DCDCDC"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:text="LOG IN"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginBottom="20sp" />

            <TextView
                android:id="@+id/new_employee"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:text="New to Handz? Sign Up!"
                android:gravity="center"
                android:textSize="22sp"
                android:textAllCaps="true"
                android:background="#f1ce6b"
                android:textColor="#000000"
                android:layout_marginTop="5sp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:text="Forgot Password?"
                android:gravity="center"
                android:textSize="22sp"
                android:textAllCaps="true"
                android:layout_marginBottom="30sp"
                android:background="#00898d"
                android:textColor="#000000"
                android:layout_gravity="center" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/activity_main_btn_login"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
           />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/handz"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="245dp"
        android:layout_marginTop="145dp"
        android:text="login_withfaceboojk"
        android:visibility="gone"/>

</RelativeLayout>