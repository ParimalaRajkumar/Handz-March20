<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1" >

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|center"
                    android:background="#BFE8C64B"
                    android:gravity="top"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:id="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <RelativeLayout
                            android:id="@+id/rela1"
                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:background="#178487">

                            <ImageView
                                android:id="@+id/close_btn"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_marginTop="10sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20sp"
                                android:background="@drawable/black_x_button" />


                            <RelativeLayout
                                android:id="@+id/lay2"
                                android:layout_width="180sp"
                                android:layout_height="40sp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="50sp">

                                <TextView
                                    android:id="@+id/text1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40sp"
                                    android:layout_marginRight="20sp"
                                    android:textColor="#000000"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:textSize="22sp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rating"
                                android:layout_width="180sp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/lay2"
                                android:gravity="center"
                                android:layout_alignParentRight="true">

                                <TextView
                                    android:id="@+id/text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rating: "
                                    android:textStyle="italic"
                                    android:layout_toLeftOf="@+id/rating_value"
                                    android:textSize="20sp"
                                    android:layout_centerVertical="true"
                                    android:textColor="#000000"/>

                                <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_marginRight="5sp"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/text2"
                                    android:background="@drawable/starnew"/>

                                <TextView
                                    android:id="@+id/rating_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:textSize="22sp"
                                    android:textColor="#000000"/>

                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="50sp">

                            <ImageView
                                android:id="@+id/profile_image"
                                android:layout_width="120sp"
                                android:layout_height="120sp"
                                android:scaleType="fitXY"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/default_profile"
                                android:padding="4dp"
                                android:background="@drawable/image_border"/>

                            <ImageView
                                android:layout_width="120sp"
                                android:layout_height="120sp"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/image_border"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/job_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:paddingTop="5sp"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@+id/relay"
                            android:gravity="center"
                            android:layout_below="@+id/rela1"
                            android:textColor="#000000"/>

                    </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#4D4D4D">

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:scrollbars="vertical"
                    android:textColor="#DCDCDC"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/flexible_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="46sp"
                        android:background="#178487"
                        android:textAllCaps="false"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:text="Work Date/Time is Flexible For This Job"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BFE8C64B"
                android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="when:"
                            android:textColor="#000000"
                            android:layout_marginLeft="20sp"
                            android:textSize="16sp"
                            android:textAllCaps="true"/>

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="10sp"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="start time:"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textAllCaps="true"/>

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="10sp"
                            android:textSize="16sp"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="expected duration:"
                        android:textColor="#000000"
                        android:layout_marginLeft="10sp"
                        android:textSize="16sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="10sp"
                        android:textSize="16sp"/>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="5sp"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/t4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pay:"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textAllCaps="true"/>

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="5sp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"/>

                    </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:background="#4D4D4D">

            <TextView
                android:id="@+id/apply_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply for this job"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:padding="10sp"
                android:textAllCaps="true"
                android:background="@drawable/border_gray"
                android:layout_marginBottom="10sp"
                android:textStyle="bold"
                android:textColor="#DCDCDC"
                android:textSize="24sp"
                android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="20sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/handz"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>