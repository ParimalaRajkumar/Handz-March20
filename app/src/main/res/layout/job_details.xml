<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="20sp"
                android:orientation="vertical"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="500sp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top|center"
                    android:background="#B0954E"
                    android:gravity="top">

                    <RelativeLayout
                        android:id="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <RelativeLayout
                            android:id="@+id/rela1"
                            android:layout_width="match_parent"
                            android:layout_height="120sp"
                            android:background="#178487">

                            <RelativeLayout
                                android:id="@+id/lay2"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:gravity="right"
                                android:layout_marginTop="20sp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40sp"
                                    android:layout_marginRight="10sp"
                                    android:textColor="#000000"
                                    android:gravity="center_vertical"
                                    android:layout_alignParentRight="true"
                                    android:textSize="26sp"/>

                                <ImageView
                                    android:id="@+id/close_btn"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_marginRight="20sp"
                                    android:layout_toRightOf="@+id/text1"
                                    android:background="@drawable/black_x_button" />


                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30sp">

                            <ImageView
                                android:id="@+id/profile_image"
                                android:layout_width="120sp"
                                android:layout_height="120sp"
                                android:layout_alignParentTop="true"
                                android:scaleType="fitXY"
                                android:layout_marginLeft="20sp"
                                android:padding="4dp"
                                android:src="@drawable/default_profile"
                                android:background="@drawable/image_border"/>

                            <ImageView
                                android:id="@+id/pro"
                                android:layout_width="120sp"
                                android:layout_marginLeft="20sp"
                                android:layout_height="120sp"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/image_border" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_toRightOf="@id/pro"
                                android:layout_marginTop="40sp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/im"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/starnew"
                                    android:layout_marginEnd="11dp"/>

                                <TextView
                                    android:id="@+id/text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="5sp"
                                    android:layout_toRightOf="@+id/im"
                                    android:text="Rating: "
                                    android:textColor="#000000"
                                    android:textSize="22sp" />


                                <TextView
                                    android:id="@+id/text3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/text2"
                                    android:layout_centerVertical="true"
                                    android:textColor="#000000"
                                    android:textSize="24sp" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/job_name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relay"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:paddingTop="10sp"
                            android:textStyle="bold"
                            android:paddingBottom="10sp"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#4d4d4d"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_below="@+id/r1">

                        <TextView
                            android:id="@+id/description_text"
                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:gravity="center"
                            android:scrollbars="vertical"
                            android:textColor="#DCDCDC"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:text="when :"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3sp"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20sp"
                        android:layout_below="@+id/l1"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/t4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Time:"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textAllCaps="true"/>

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="3sp"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l4"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:text="Expected duration :"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3sp"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l2"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="20sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20sp"
                            android:text="pay :"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3sp"
                            android:text="$"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="24sp" />-->

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:paddingLeft="3sp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="24sp" />


                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tex1"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginTop="65sp"
                android:layout_marginBottom="20sp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/handz"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>