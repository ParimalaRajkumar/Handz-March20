<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C4C4C"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingTop="20sp">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#C1C1C1"
        android:textSize="16sp"
        android:paddingBottom="10sp"
        android:gravity="left"
        android:text="The job you just created will move to archived jobs 24 hours after the start time."/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C1C1C1"
            android:textSize="16sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:gravity="left"
            android:text="This will not affect any active jobs or persons you have already hired."/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C1C1C1"
            android:textSize="16sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:gravity="left"
            android:text="You can change the start time in &quot;edit a job&quot; or reactivate a job that has been archieved.  "/>

        <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:gravity="center"
        android:paddingBottom="5sp">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do not show this message again"
            android:textSize="14sp"
            android:paddingLeft="15sp"
            android:button="@drawable/custom_checkbox"
            android:gravity="center_vertical"
            android:textAllCaps="false"
            android:textColor="#898989"/>

    </LinearLayout>

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="okay"
        android:textAllCaps="true"
        android:textColor="#C1C1C1"
        android:paddingTop="10sp"
        android:textSize="18sp"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:paddingBottom="10sp"
        android:layout_gravity="center"
        android:background="@drawable/border_gray"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"/>

    </LinearLayout>

</LinearLayout>