<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d4d4d"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#BFBFBF"
        android:textSize="18sp"
        android:padding="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Reminder that the job you just created will move to archived posted jobs folder 24 hours after the set start time. If you do not wish the job to move to archived posted jobs folder, update the date and/or time under &quot;edit a job.&quot; Anyone who you have already hired for this job will not be affected. "/>

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:gravity="center"
        android:paddingBottom="5sp">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do not show this message again"
            android:textSize="16sp"
            android:paddingLeft="15sp"
            android:textStyle="bold"
            android:button="@drawable/custom_checkbox"
            android:gravity="center_vertical"
            android:textAllCaps="false"
            android:textColor="#BFBFBF"/>

    </LinearLayout>

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="okay"
        android:textAllCaps="true"
        android:textColor="#BFBFBF"
        android:paddingTop="10sp"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="10sp"
        android:layout_gravity="center"
        android:background="@drawable/border_gray"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"/>

    </LinearLayout>

</LinearLayout>