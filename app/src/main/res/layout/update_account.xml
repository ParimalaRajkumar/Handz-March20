<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="580sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1" >


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100sp"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:background="#BFE8C64B"
        android:gravity="top">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="update a Checking Account"
                android:textSize="22sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="70sp"
                android:textColor="#DCDCDC"
                android:background="#3B3B3B"/>

            <EditText
                android:id="@+id/up_ac_name"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_below="@+id/text1"
                android:paddingLeft="12sp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Name on Account"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/up_brn"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingLeft="12sp"
                android:textSize="16sp"
                android:layout_below="@+id/up_ac_name"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Bank Routing Number"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/up_ac_no"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingLeft="12sp"
                android:layout_below="@+id/up_brn"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Checking Account Number"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/up_re_ac_no"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingLeft="12sp"
                android:layout_below="@+id/up_ac_no"
                android:textSize="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Re-enter Checking Account Number"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/up_lic_no"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingLeft="12sp"
                android:layout_below="@+id/up_re_ac_no"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="10sp"
                android:textColorHint="#000000"
                android:hint="Driver License Number"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/up_sel_state"
                android:layout_width="150sp"
                android:layout_height="40sp"
                android:layout_below="@+id/up_lic_no"
                android:layout_marginTop="10sp"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Select State"
                android:background="@drawable/white_edit_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:layout_below="@+id/up_sel_state"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:background="#BF178487">

                <CheckBox
                    android:id="@+id/default_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make this my default account"
                    android:textSize="18sp"
                    android:paddingLeft="10sp"
                    android:button="@drawable/custom_checkbox"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textColor="#000000"/>

            </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </ImageView>

                <Button
                    android:id="@+id/update_account"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:text="update YOUR ACCOUNT"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textAllCaps="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#DCDCDC"
                    android:paddingRight="10sp"
                    android:paddingLeft="20sp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/border_gray"/>

                </RelativeLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>