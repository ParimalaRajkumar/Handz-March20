<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="640sp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="top|center"
                android:layout_marginTop="100sp"
                android:background="#BFE8C64B"
                android:gravity="top">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="70sp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                        android:background="@drawable/shape"
                        android:hint="First Name"
                        android:paddingLeft="12sp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/shape"
                        android:hint="Last Name"
                        android:paddingLeft="12sp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="16sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/address1"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_below="@+id/layout1"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/shape"
                    android:hint="Street Address Line 1"
                    android:paddingLeft="12sp"
                    android:textColorHint="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/address2"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_below="@+id/address1"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/shape"
                    android:hint="Street Address Line 2"
                    android:paddingLeft="12sp"
                    android:textColorHint="#000000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address2"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                        android:background="@drawable/shape"
                        android:hint="City or Town"
                        android:paddingLeft="12sp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/shape"
                        android:hint="ST"
                        android:paddingLeft="12sp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/zipcode"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/shape"
                        android:hint="ZipCode"
                        android:inputType="number"
                        android:paddingLeft="12sp"
                        android:paddingRight="5sp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="16sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_below="@+id/layout2"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/shape"
                    android:hint="Email Address"
                    android:paddingLeft="12sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/retype_email"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_below="@+id/email"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/shape"
                    android:hint="Re-type Email Address"
                    android:paddingLeft="12sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_below="@+id/retype_email"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="30sp"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:hint="Password(8-30 Characters...)"
                    android:inputType="textPassword"
                    android:paddingLeft="12sp"
                    android:textColorHint="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/retype_password"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_below="@+id/password"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:hint="Re-type Password"
                    android:inputType="textPassword"
                    android:paddingLeft="12sp"
                    android:textColorHint="#000000"
                    android:textSize="16sp" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/logo"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="6sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/logo"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="120sp"
                android:layout_height="45sp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/handz"/>

            <Button
                android:id="@+id/next1"
                android:layout_width="50sp"
                android:layout_height="45sp"
                android:textAllCaps="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/next_arrow"
                android:layout_gravity="right"
                android:layout_marginRight="15sp"/>

        </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>