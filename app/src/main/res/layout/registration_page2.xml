<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="530sp"
        android:orientation="vertical"
        android:layout_centerVertical="true">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100sp"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:background="#AE944F"
        android:gravity="top">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="70sp"
            android:layout_marginRight="12sp"
            android:weightSum="2">

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:hint="First Name"
                android:textSize="16sp"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:paddingLeft="12sp"
                android:background="@drawable/shape" />

            <EditText
                android:id="@+id/last_name"
                android:layout_marginLeft="5sp"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:hint="Last Name"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:paddingLeft="12sp"
                android:background="@drawable/shape" />

        </LinearLayout>

        <EditText
            android:id="@+id/address1"
            android:layout_marginLeft="12sp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:textSize="16sp"
            android:textColorHint="#000000"
            android:layout_below="@+id/layout1"
            android:layout_marginRight="12sp"
            android:hint="Street Address Line 1"
            android:layout_marginTop="10sp"
            android:paddingLeft="12sp"
            android:background="@drawable/shape" />

        <EditText
            android:id="@+id/address2"
            android:layout_marginLeft="12sp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:textSize="16sp"
            android:layout_below="@+id/address1"
            android:textColorHint="#000000"
            android:layout_marginRight="12sp"
            android:hint="Street Address Line 2"
            android:paddingLeft="12sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/shape" />

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/address2"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:layout_marginTop="10sp"
            android:weightSum="3">

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingLeft="12sp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="City or Town"
                android:layout_weight="1"
                android:background="@drawable/shape"/>

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="10sp"
                android:paddingLeft="12sp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="ST"
                android:background="@drawable/shape"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/zipcode"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="10sp"
                android:textSize="16sp"
                android:paddingLeft="12sp"
                android:paddingRight="5sp"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="ZipCode"
                android:background="@drawable/shape"
                android:layout_weight="1" />

        </LinearLayout>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:layout_marginTop="30sp"
            android:paddingLeft="12sp"
            android:textSize="16sp"
            android:layout_below="@+id/layout2"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:hint="Email Address"
            android:background="@drawable/shape"/>

        <EditText
            android:id="@+id/retype_email"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/email"
            android:textSize="16sp"
            android:paddingLeft="12sp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:hint="Re-type Email Address"
            android:background="@drawable/shape"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </ImageView>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/handz"/>

            <Button
                android:id="@+id/next1"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:textAllCaps="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/next_arrow"
                android:layout_gravity="right"
                android:layout_marginRight="20sp"/>

        </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>