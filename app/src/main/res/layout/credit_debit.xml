<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="570sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100sp"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:background="#BFE8C64B"
        android:gravity="top">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Add a Credit or Debit Card"
                android:textSize="22sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#DCDCDC"
                android:background="#3B3B3B"
                android:gravity="center"
                android:layout_marginTop="70sp"/>

            <EditText
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="20sp"
                android:paddingLeft="12sp"
                android:layout_marginLeft="12sp"
                android:layout_marginRight="12sp"
                android:layout_below="@+id/text1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Name on Card"
                android:background="@drawable/shape"/>

            <EditText
                android:id="@+id/card_no"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingLeft="12sp"
                android:layout_marginLeft="12sp"
                android:layout_marginRight="12sp"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/card"
                android:textSize="16sp"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Card Number"
                android:background="@drawable/shape"/>

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="12sp"
                android:layout_below="@+id/card_no"
                android:layout_marginRight="12sp"
                android:layout_marginTop="10sp"
                android:weightSum="3">

                <EditText
                    android:id="@+id/month"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingLeft="12sp"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="MM"
                    android:layout_weight="1"
                    android:background="@drawable/shape"/>

                <EditText
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingLeft="12sp"
                    android:textSize="16sp"
                    android:layout_marginLeft="10sp"
                    android:inputType="number"
                    android:layout_marginRight="10sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="YY"
                    android:background="@drawable/shape"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/cvv"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingLeft="12sp"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="CVV"
                    android:background="@drawable/shape"
                    android:layout_weight="1" />

            </LinearLayout>


            <EditText
                android:id="@+id/card_acc"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:paddingLeft="12sp"
                android:layout_marginLeft="12sp"
                android:layout_marginRight="12sp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@+id/lay1"
                android:textColorHint="#000000"
                android:hint="Address on Card Account"
                android:background="@drawable/shape"/>

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/card_acc"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:weightSum="3">

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingLeft="12sp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="City or Town"
                    android:layout_weight="1"
                    android:background="@drawable/shape"/>

                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingLeft="12sp"
                    android:textSize="16sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="ST"
                    android:background="@drawable/shape"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingLeft="12sp"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="ZipCode"
                    android:background="@drawable/shape"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/lay2"
                android:layout_marginTop="20sp"
                android:background="#BF178487">

                <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make this my default card"
                android:textSize="18sp"
                    android:paddingLeft="10sp"
                    android:button="@drawable/custom_checkbox"
                    android:gravity="center_vertical"
                android:textAllCaps="true"
                android:textColor="#000000"/>

            </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </ImageView>

                <TextView
                    android:id="@+id/add_card"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:text="ADD YOUR CARD"
                    android:textAllCaps="true"
                    android:padding="10sp"
                    android:paddingRight="10sp"
                    android:paddingLeft="10sp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:textColor="#DCDCDC"
                    android:layout_marginTop="20sp"
                    android:textSize="22sp"
                    android:background="@drawable/border_gray"
                    android:layout_centerHorizontal="true" />

                </RelativeLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
