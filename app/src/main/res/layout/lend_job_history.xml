<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d4d4d">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4D4D4D"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="job history"
            android:layout_marginTop="10sp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#DCDCDC"
            android:textAllCaps="true"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="60sp"
                android:layout_height="80sp"
                android:textAllCaps="true"
                android:paddingTop="10sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingBottom="10sp"
                android:textSize="17sp"
                android:background="@drawable/pending_jobs_new"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_weight="1"
                android:src="@drawable/logo" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="60sp"
                android:layout_height="80sp"
                android:paddingTop="10sp"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingBottom="10sp"
                android:textSize="17sp"
                android:background="@drawable/active_button_new"/>

        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C2C2C7"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:id="@+id/ed_search"
        android:background="@drawable/search"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:paddingLeft="15sp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/search_30"
        android:hint="Search by Keyword(s) or Date"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
   <!-- <TextView
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:layout_marginTop="-50sp"
        android:background="@drawable/handz"/>-->

</LinearLayout>