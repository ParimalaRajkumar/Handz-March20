<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#4C4C4C"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="50sp"
                    android:layout_centerVertical="true"
                    android:layout_height="50sp"
                    android:layout_marginLeft="30sp"
                    android:src="@drawable/back_img" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10sp"
                android:background="#9A9999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="#BFBFBF"
                android:paddingLeft="10sp"
                android:gravity="center"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="summary of payment details"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9A9999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="480sp"
                android:layout_marginTop="10sp"
                android:background="#B0954E"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:gravity="right"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="60sp"
                        android:orientation="horizontal"
                        android:background="@drawable/shape">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:layout_gravity="center" />

                        <EditText
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="30sp"
                            android:inputType="numberDecimal"
                            android:textStyle="bold|italic"
                            android:textColor="#000000"
                            android:background="@null"
                            android:textColorHint="#000000"
                            android:paddingLeft="3sp"
                            android:paddingRight="5sp"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <!-- <EditText
                         android:id="@+id/amount"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text=""
                         android:textSize="22sp"
                         android:background="@null"
                         android:textStyle="bold"
                         android:inputType="number"
                         android:textAllCaps="true"
                         android:layout_marginLeft="30sp"
                         android:textColor="#000000"
                         android:layout_gravity="center" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hourly Wage"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginLeft="30sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="15sp"
                        android:background="@drawable/shape"
                        android:orientation="horizontal"
                        android:gravity="right">

                        <EditText
                            android:id="@+id/hours"
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:gravity="right"
                            android:textSize="22sp"
                            android:paddingRight="10sp"
                            android:background="@null"
                            android:textStyle="bold|italic"
                            android:inputType="number"
                            android:textAllCaps="true"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expected Hours"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10sp"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="60sp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="30sp"
                            android:textSize="22sp"
                            android:background="@null"
                            android:paddingLeft="3sp"
                            android:paddingRight="5sp"
                            android:textStyle="bold|italic"
                            android:textAllCaps="true"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We believe in 100% transparency. There will be a $1.00 Handz for Hire service fee and a Paypal Merchant Processing Fee at the time of payment. We are serious about allowing you to name your price! Choose one of the following two options:"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/subtract"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:text="subtract the fees from \n the total listed above"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="#4D4D4D"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginRight="20sp"
                    android:textColor="#BFBFBF"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:text="add the fees to the \n total listed above"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="#4D4D4D"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="20sp"
                    android:textColor="#BFBFBF"
                    android:layout_gravity="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/tex1"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/handz"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>