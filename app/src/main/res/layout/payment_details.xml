<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="560sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1" >

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="100sp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="#AE944F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="payment details"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textAllCaps="true"
                                android:textSize="20sp"
                                android:layout_marginTop="20sp"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="100sp"
                                    android:layout_height="30sp"
                                    android:gravity="center"
                                    android:layout_marginTop="10sp"
                                    android:orientation="horizontal"
                                    android:background="@drawable/shape">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$"
                                    android:textStyle="bold|italic"
                                    android:textColor="#000000"
                                    android:textAllCaps="true"
                                    android:paddingLeft="5sp"
                                    android:textSize="20sp"
                                    android:layout_gravity="center"/>

                                <EditText
                                    android:id="@+id/amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30sp"
                                    android:inputType="numberDecimal"
                                    android:textColor="#000000"
                                    android:text="0.00"
                                    android:textStyle="bold|italic"
                                    android:background="@null"
                                    android:paddingLeft="5sp"
                                    android:textColorHint="#000000"
                                    android:textAllCaps="true"
                                    android:textSize="20sp"
                                    android:layout_gravity="center"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hourly Wage"
                                    android:textColor="#000000"
                                    android:layout_marginLeft="10sp"
                                    android:textAllCaps="false"
                                    android:textStyle="bold|italic"
                                    android:textSize="18sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated duration x Hourly Wage = \n Estimated Payment"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                android:textAllCaps="false"
                                android:gravity="center"
                                android:textStyle="bold|italic"
                                android:textSize="16sp"
                                android:layout_marginTop="20sp" />


                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(This will help calculate the minimum payment to your hired help,but our tip feature will allow you to add more at time of payment (optional) for a job well done or unforeseen extra hours.)"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:textStyle="bold|italic"
                                android:textAllCaps="false"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginBottom="10sp"
                                android:textSize="16sp"
                                android:layout_marginTop="10sp"
                                android:layout_gravity="center"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#000000">

                            </View>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Looking for someone long term? Like a summer nanny or daily dog walker? Use Handz to help you find that perfect person! If you like them, We've made it convenient for you to reconnect and rehire!"
                            android:textColor="#000000"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:paddingBottom="10sp"
                            android:textStyle="bold|italic"
                            android:paddingTop="10sp"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:background="#29988E"
                            android:layout_gravity="center"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#000000">

                        </View>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|center"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:id="@+id/relativeLayout">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        android:layout_gravity="center"
                        android:background="@drawable/logo" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/close_btn"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/x_button"
                    android:layout_marginEnd="14dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:paddingBottom="30sp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/handz"/>

                <Button
                    android:id="@+id/update_btn"
                    android:layout_width="70sp"
                    android:layout_height="45sp"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="true"
                    android:background="@drawable/update"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update_btn"
                    android:text="update"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#DCDCDC"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>