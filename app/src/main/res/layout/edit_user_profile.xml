<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d4d4d">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <RelativeLayout
                    android:id="@+id/rela1"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:background="#007679"
                    android:layout_marginTop="40sp">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="170sp"
                        android:layout_height="40sp"
                        android:layout_marginTop="15sp"
                        android:hint="Type Name Here"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:layout_marginRight="10sp"
                        android:textColorHint="#000000"
                        android:background="@drawable/type_bg"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:layout_alignParentRight="true"/>

                    <RelativeLayout
                        android:id="@+id/rating"
                        android:layout_width="180sp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:gravity="center"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20sp"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating: "
                            android:textStyle="italic"
                            android:layout_toLeftOf="@+id/text3"
                            android:layout_marginRight="5sp"
                            android:textSize="20sp"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"/>

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginRight="10sp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/text2"
                            android:background="@drawable/starnew"/>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textSize="22sp"
                            android:textColor="#000000"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="10sp"
                        android:padding="4dp"
                        android:background="@drawable/image_border"
                        android:scaleType="fitXY"/>


                    <TextView
                        android:id="@+id/text_photo"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:background="@drawable/dashed_line"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10sp"
                        android:paddingLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:paddingRight="10sp"
                        android:textSize="16sp"
                        android:text="Click Here to Insert Photo"/>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50sp"
                android:background="#C9C9C9"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/change_home_address"
                android:text="CHANGE HOME ADDRESS"
                android:gravity="center"
                android:textAllCaps="true"
                android:background="@null"
                android:textColor="#CBCACA"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10sp"
                android:background="#C9C9C9"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5sp"
                android:background="#CBCACA"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/condition"
                android:text="handz terms &amp; conditions"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:textColor="#CBCACA"
                android:textSize="20sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10sp"
                android:background="#CBCACA"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5sp"
                android:background="#CBCACA"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login"
                android:text="link to paypal login"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:textColor="#CBCACA"
                android:textSize="20sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10sp"
                android:background="#CBCACA"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5sp"
                android:background="#CBCACA"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_email"
                android:text="UPDATE Email/PASSWORD"
                android:gravity="center"
                android:background="@null"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="#CBCACA"
                android:textAllCaps="true"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10sp"
                android:background="#CBCACA"/>

            <Button
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:id="@+id/h_icon"
                android:layout_marginTop="20sp"
                android:layout_gravity="center"
                android:background="@drawable/logo"/>

            <TextView
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="20sp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/handz"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>