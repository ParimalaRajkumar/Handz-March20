<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4d4d4d"
    tools:context="com.example.iz_test.handzforhire.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:background="@drawable/logo"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="110sp"
                android:id="@+id/get_handz"
                android:text="NEED A HAND"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="46sp"
                android:layout_marginTop="20sp"
                android:background="#f1ce6b"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="110sp"
                android:id="@+id/give_handz"
                android:text="LEND A HAND"
                android:layout_marginTop="15sp"
                android:textColor="#000000"
                android:textSize="46sp"
                android:gravity="center"
                android:background="#00898d"/>

            <LinearLayout
                android:id="@+id/promo_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/border_gray"
                android:layout_marginTop="10sp">

                <ImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/question"/>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is Handz?"
                    android:textSize="16sp"
                    android:paddingLeft="10sp"
                    android:textStyle="bold"
                    android:paddingRight="10sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginTop="5sp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="#DCDCDC" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="10sp"
                android:background="#9A9999"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textColor="#DCDCDC" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="10sp"
                android:background="#9A9999"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
