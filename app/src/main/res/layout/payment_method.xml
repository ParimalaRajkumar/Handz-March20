<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_marginTop="70sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:background="@drawable/logo" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Add a Payment Method"
                android:textSize="22sp"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/current_username"
                android:layout_marginTop="20sp"/>

    <Button
        android:id="@+id/add_credit"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:text="ADD A CREDIT or DEBIT CARD"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/green_btn_bg"/>


    <Button
        android:id="@+id/add_account"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:text="ADD A CHECKING ACCOUNT"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/yellow_btn_bg"/>

            <LinearLayout
                android:id="@+id/paypal_layout"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_marginLeft="10sp"
                android:gravity="center"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="30sp"
                android:orientation="horizontal"
                android:background="@drawable/paypal_btn_bg">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:text="ADD A"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginRight="10sp"/>

                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:background="@drawable/paypal_small"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
