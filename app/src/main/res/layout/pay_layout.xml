<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/pay_border"
    android:layout_marginTop="50sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"/>

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/exit_close_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="20sp"
        android:orientation="horizontal"
        android:layout_marginTop="15sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/white_round_border">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text="$ "
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:paddingLeft="15sp"/>

        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="00.00.00"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="5sp"
            android:background="@android:color/transparent"
            android:textSize="20sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_height="0.5dp">
    </View>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:button="@null"
            android:textSize="18sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:checked="true"
            android:text="Lump Sum"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="0.5dp">
        </View>

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginRight="20sp"
            android:textSize="18sp"
            android:layout_marginLeft="20sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="Hourly Wage"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="0.5dp">
        </View>

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginRight="20sp"
            android:textSize="18sp"
            android:layout_marginLeft="20sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="Dialy"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="0.5dp">
        </View>

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginRight="20sp"
            android:textSize="18sp"
            android:layout_marginLeft="20sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="Weekly"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="0.5dp">
        </View>

        <RadioButton
            android:id="@+id/radio5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginRight="20sp"
            android:textSize="18sp"
            android:layout_marginLeft="20sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="Bi-Weekly"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="0.5dp">
        </View>

        <RadioButton
            android:id="@+id/radio6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginRight="20sp"
            android:textSize="18sp"
            android:layout_marginLeft="20sp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="Monthly"
            android:textColor="#000000"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_height="0.5dp">
    </View>

    <View
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_height="0.5dp">
    </View>

        <TextView
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Update"
            android:gravity="center"
            android:textColor="#007BFD"
            android:layout_weight="1"
            android:textSize="20sp"/>

</LinearLayout>
