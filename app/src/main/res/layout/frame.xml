<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wood_bg"
    tools:context="com.example.baskar.handzforhire.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <RelativeLayout
                    android:id="@+id/rela1"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:background="@drawable/green_profile_bg"
                    android:layout_marginTop="30sp">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="180sp"
                        android:layout_height="40sp"
                        android:gravity="center"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="20sp"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_alignParentRight="true"/>

                    <RelativeLayout
                        android:layout_width="180sp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text1"
                        android:gravity="center"
                        android:layout_marginRight="20sp"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating: "
                            android:textStyle="italic"
                            android:layout_toLeftOf="@+id/text3"
                            android:layout_marginRight="5sp"
                            android:textSize="20sp"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"/>

                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="50sp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/text2"
                            android:background="@drawable/starnew"/>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="4.5"
                            android:layout_alignParentRight="true"
                            android:textSize="22sp"
                            android:textColor="#000000"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="15sp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"/>

                    <ImageView
                        android:id="@+id/default_image"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/default_profile" />

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/image_border"/>

                </RelativeLayout>

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:id="@+id/create_job"
                android:text="create a new job"
                android:textSize="22sp"
                android:layout_marginTop="10sp"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@drawable/paypal_btn_bg"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:id="@+id/edit_posted_job"
                android:text="edit posted jobs"
                android:layout_marginTop="5sp"
                android:textSize="22sp"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@drawable/paypal_btn_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="65sp"
                    android:id="@+id/posted_job"
                    android:text="posted jobs"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:background="@drawable/paypal_btn_bg"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="65sp"
                    android:id="@+id/active_job"
                    android:text="active jobs"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:background="@drawable/paypal_btn_bg"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:id="@+id/job_history"
                android:text="job history"
                android:layout_marginTop="5sp"
                android:textSize="22sp"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@drawable/paypal_btn_bg"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:id="@+id/edit_user_profile"
                android:text="edit user profile"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_marginTop="5sp"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@drawable/paypal_btn_bg"/>

    </LinearLayout>

                <Button
                    android:layout_width="160sp"
                    android:layout_height="85sp"
                    android:id="@+id/handz_for_hire"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/handz_logo"/>

                <Button
                    android:layout_width="150sp"
                    android:layout_height="80sp"
                    android:id="@+id/need_help"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_gravity="right|bottom"
                    android:textAllCaps="false"
                    android:text="Need Help?"
                    android:background="@drawable/gray_bg"/>

</FrameLayout>
