<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#4d4d4d"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="50sp"
                    android:layout_centerVertical="true"
                    android:layout_height="50sp"
                    android:layout_marginLeft="30sp"
                    android:src="@drawable/back_img" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10sp"
                android:background="#9A9999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#BEBEBE"
                android:paddingLeft="10sp"
                android:gravity="center"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:text="summary of payment details"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9A9999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450sp"
                android:layout_marginTop="10sp"
                android:background="#BFE8C64B"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:gravity="right"
                        android:layout_marginLeft="55sp"
                        android:orientation="horizontal"
                        android:background="@drawable/shape">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="22sp"
                            android:paddingLeft="5sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:layout_gravity="center" />

                        <EditText
                            android:id="@+id/hourly_text"
                            android:layout_width="wrap_content"
                            android:layout_height="30sp"
                            android:inputType="numberDecimal"
                            android:textStyle="bold|italic"
                            android:textColor="#000000"
                            android:background="@null"
                            android:textColorHint="#000000"
                            android:paddingLeft="5sp"
                            android:paddingRight="10sp"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:text="Hourly Wage"
                        android:textSize="20sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:text="x"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="20sp"
                        android:background="@drawable/shape"
                        android:orientation="horizontal"
                        android:gravity="right">

                        <EditText
                            android:id="@+id/expected_text"
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:gravity="right"
                            android:textSize="22sp"
                            android:paddingRight="10sp"
                            android:background="@null"
                            android:textStyle="bold|italic"
                            android:inputType="number"
                            android:textAllCaps="true"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expected Hours"
                        android:textSize="20sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="40sp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/ajp"
                            android:layout_width="wrap_content"
                            android:layout_height="30sp"
                            android:textSize="22sp"
                            android:background="@null"
                            android:paddingLeft="3sp"
                            android:paddingRight="5sp"
                            android:textStyle="bold|italic"
                            android:textAllCaps="true"
                            android:textColor="#000000" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out of Pocket \nExpense"
                        android:textSize="18sp"
                        android:layout_marginLeft="25sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="36sp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10sp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="30sp"
                            android:textSize="22sp"
                            android:text="1.00"
                            android:background="@null"
                            android:paddingLeft="3sp"
                            android:paddingRight="5sp"
                            android:textStyle="bold|italic"
                            android:textAllCaps="true"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Handz for Hire Flat \nService Fee"
                        android:textSize="18sp"
                        android:layout_marginLeft="25sp"
                        android:textStyle="italic"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="36sp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10sp"
                        android:gravity="right" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/pmpf"
                            android:layout_width="wrap_content"
                            android:layout_height="30sp"
                            android:textSize="22sp"
                            android:background="@null"
                            android:paddingLeft="3sp"
                            android:paddingRight="5sp"
                            android:textStyle="bold|italic"
                            android:textAllCaps="true"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paypal Merchant \nProcessing Fee"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="25sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <ImageView
                        android:id="@+id/info"
                        android:layout_width="30sp"
                        android:layout_centerVertical="true"
                        android:layout_height="30sp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/info_icon" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="20sp"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="30sp"
                        android:gravity="center" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/ope"
                            android:layout_width="wrap_content"
                            android:layout_height="30sp"
                            android:textSize="22sp"
                            android:background="@null"
                            android:paddingLeft="3sp"
                            android:paddingRight="5sp"
                            android:textStyle="bold|italic"
                            android:textAllCaps="true"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advertised \nJob Payout"
                        android:textSize="20sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="30sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You may adjust your pricing above or know that \nyou can add a tip at the time of payment. No \nmoney will be charged or transferred until you \nauthorize it at the time of payment."
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/create_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5sp"
                android:textColor="#BEBEBE"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:paddingBottom="5sp"
                android:layout_marginTop="10sp"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/border_gray"
                android:paddingTop="5sp"
                android:text="create this job"
                android:textStyle="bold"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5sp"
                android:textColor="#BEBEBE"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:visibility="invisible"
                android:paddingBottom="5sp"
                android:layout_marginTop="10sp"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/border_gray"
                android:paddingTop="5sp"
                android:text="create this job"
                android:textStyle="bold"
                android:textSize="26sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tex1"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/handz"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>