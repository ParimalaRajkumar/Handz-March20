<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4D4D4D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <include
                layout="@layout/progressbar"
                android:visibility="gone"
                android:gravity="center">

            </include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <RelativeLayout
                    android:id="@+id/rela1"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:background="#007679"
                    android:layout_marginTop="20sp">

                    <RelativeLayout
                        android:id="@+id/relay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="130sp"
                            android:layout_height="50sp"
                            android:gravity="center"
                            android:layout_marginTop="10sp"
                            android:textSize="26sp"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/menu"
                            android:layout_width="35sp"
                            android:layout_height="40sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20sp"
                            android:layout_toRightOf="@+id/text1"
                            android:background="@drawable/menu"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rating"
                        android:layout_width="180sp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relay"
                        android:gravity="center"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20sp"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating: "
                            android:textStyle="italic"
                            android:layout_toLeftOf="@+id/text3"
                            android:layout_marginRight="5sp"
                            android:textSize="22sp"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"/>

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/starnew"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/text2"
                            android:layout_marginEnd="11dp" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textSize="22sp"
                            android:textColor="#000000"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp" >

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:scaleType="fitXY"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="4dp"
                        android:src="@drawable/default_profile"
                        android:background="@drawable/image_border" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@null"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="need a hand"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#CBCACA"
                android:textSize="34sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:id="@+id/create_job"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:background="@drawable/create_job"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="create a job"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="5sp"
                        android:textSize="12sp"
                        android:textColor="#ffffff"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:gravity="center">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:id="@+id/edit_posted_job"
                            android:layout_centerHorizontal="true"
                            android:textColor="#000000"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:background="@drawable/edit_job"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="edit a job"
                            android:layout_centerInParent="true"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:layout_marginTop="5sp"
                            android:textSize="12sp"
                            android:layout_below="@+id/edit_posted_job"
                            android:textColor="#ffffff"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/posted_job"
                        android:layout_width="80sp"
                        android:layout_height="78dp"
                        android:background="@drawable/posted_jobs"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_postedjobcnt"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:background="@drawable/circle_shape"
                                android:textColor="#ffffff"
                                android:visibility="invisible"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="posted jobs"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:textSize="12sp"
                        android:textColor="#ffffff"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_gravity="center"
                        android:background="@drawable/logo"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/active_job"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_weight="1"
                        android:background="@drawable/active_jobs"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_activejobscnt"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:background="@drawable/circle_shape"
                                android:textColor="#ffffff"
                                android:visibility="invisible"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="active jobs"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:textSize="12sp"
                        android:layout_below="@+id/active_job"
                        android:textColor="#ffffff"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5sp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/job_history"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/job_history"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/job_historycnt"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:background="@drawable/circle_shape"
                                android:textColor="#ffffff"
                                android:visibility="invisible"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="job history"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="5sp"
                        android:textSize="12sp"
                        android:textColor="#ffffff"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/edit_user_profile"
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/edit_user"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edit_user_profile"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5sp"
                            android:text="edit user profile"
                            android:textAllCaps="true"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/tutorial_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="30sp"
                    android:layout_marginLeft="20sp">

                    <ImageView
                        android:id="@+id/tutorial"
                        android:layout_width="50sp"
                        android:layout_height="30sp"
                        android:gravity="center"
                        android:src="@drawable/tutorial_image"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tutorial"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:layout_below="@+id/tutorial"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/need_help"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bulb"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30sp"
                    android:layout_marginRight="20sp">

                    <ImageView
                        android:id="@+id/sha_need"
                        android:layout_width="50sp"
                        android:layout_height="30sp"
                        android:src="@drawable/share"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="share"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:layout_below="@+id/sha_need"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tex1"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="10sp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/handz"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
