<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/rel_viewapplicant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="20sp"
        android:textSize="22sp"
        android:textAllCaps="true"/>

        <TextView
            android:id="@+id/job_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/text1"
            android:textColor="#000000"
            android:visibility="gone"
            android:layout_marginLeft="20sp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/no_applicants"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/circle_shape"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="when:"
            android:textColor="#000000"
            android:layout_marginLeft="20sp"
            android:textSize="16sp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="5sp"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="5sp"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expected duration:"
            android:textColor="#000000"
            android:layout_marginLeft="20sp"
            android:textSize="16sp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="5sp"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:gravity="center">

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pay:"
            android:textColor="#000000"
            android:layout_marginLeft="20sp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="5sp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20sp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/checked_checkbox" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20sp"
            android:layout_centerVertical="true"
            android:src="@drawable/unchecked_checkbox"
            android:visibility="gone" />


        <TextView
            android:id="@+id/text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="8sp"
            android:layout_toRightOf="@+id/img"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10sp"
        android:background="#000000"/>

</LinearLayout>