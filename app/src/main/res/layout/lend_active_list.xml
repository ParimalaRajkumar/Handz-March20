<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/job_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:visibility="gone"
            android:layout_marginLeft="10sp"
            android:textSize="13sp"/>

        <LinearLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/re2"
                android:layout_width="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:padding="4dp"
                    android:src="@drawable/default_profile"
                    android:background="@drawable/image_border" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp">

                <TextView
                    android:id="@+id/job_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:id="@+id/lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5sp"
                    android:layout_below="@+id/job_name_text">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/employer_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/employee_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/image1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="when:"
                        android:textColor="#000000"
                        android:layout_marginLeft="10sp"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/when"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="4sp"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/lay"
                    android:layout_marginTop="5sp">

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="expected duration:"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginLeft="10sp"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="5sp"
                        android:textSize="14sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/lay3"
                    android:layout_marginTop="5sp">

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pay:"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textColor="#000000"
                        android:layout_marginLeft="2sp"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/pay_amount"
                        android:layout_width="wrap_content"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15sp"
            android:orientation="horizontal"
            android:layout_marginBottom="15sp"
            android:layout_marginRight="10sp"
            android:weightSum="3">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/job_detail_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:layout_margin="7dp"
                    android:background="@drawable/job_detail_gray"
                    android:textSize="16sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/message_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:layout_margin="7dp"
                    android:background="@drawable/message_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/message_count"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="top|right"
                    android:adjustViewBounds="true"
                    android:paddingTop="-10dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:scaleType="fitStart"
                    android:background="@drawable/circle_shape" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/payment"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:layout_margin="7dp"
                    android:background="@drawable/request_payment_icon"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/pay_count"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="top|right"
                    android:adjustViewBounds="true"
                    android:paddingTop="-10dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:scaleType="fitStart"
                    android:background="@drawable/circle_shape" />

            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5sp"
            android:background="#000000"/>

    </LinearLayout>

</LinearLayout>