<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#AB954C"
                    android:gravity="right">

                    <RelativeLayout
                        android:id="@+id/rela1"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:layout_marginTop="10sp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#007679">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="180sp"
                            android:layout_height="40sp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="20sp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <RelativeLayout
                            android:id="@+id/rating"
                            android:layout_width="180sp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/text1"
                            android:layout_marginRight="20sp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5sp"
                                android:layout_toLeftOf="@+id/text3"
                                android:text="Rating: "
                                android:textColor="#000000"
                                android:textSize="22sp"
                                android:textStyle="italic|bold" />

                            <ImageView
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10sp"
                                android:layout_toLeftOf="@+id/text2"
                                android:background="@drawable/starnew" />

                            <TextView
                                android:id="@+id/text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:layout_marginTop="2sp"
                                android:textSize="24sp" />

                        </RelativeLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="40dp">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:padding="4dp"
                            android:src="@drawable/default_profile"
                            android:background="@drawable/image_border"
                            />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#AB954C">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="5sp"
                        android:text="WHEN :"
                        android:layout_marginLeft="20sp"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/t1"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="5sp"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv2"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:text="Expected duration :"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l2"
                        android:layout_marginTop="5sp"
                        android:gravity="center"
                        android:layout_marginBottom="5sp">


                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:text="Pay:"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="24sp" />



                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/t3"
                        android:textColor="#000000"
                        android:layout_marginLeft="5sp"
                        android:textSize="24sp" />

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:background="@drawable/applyjob_background">

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Include a Message for "
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:paddingLeft="10sp"
                        android:layout_marginTop="10sp" />

                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_toRightOf="@+id/tv6"
                        android:textSize="19sp"
                        android:layout_marginTop="10sp" />

                    <EditText
                        android:id="@+id/edit"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:layout_alignParentBottom="true"
                        android:hint="Place comments here(optional).."
                        android:maxLines="200"
                        android:paddingLeft="15sp"
                        android:paddingTop="10sp"
                        android:textColorHint="#000000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:background="#AB954C">

                    <RelativeLayout
                        android:id="@+id/lay1"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="#166266">

                        <ImageView
                            android:id="@+id/handz_button"
                            android:layout_width="160sp"
                            android:layout_height="70sp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/handz_text"/>


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_gray"
                        android:text="apply"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp"
                        android:textAllCaps="true"
                        android:paddingTop="5sp"
                        android:paddingBottom="5sp"
                        android:textStyle="bold"
                        android:textColor="#DCDCDC"
                        android:textSize="25sp"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/handz"/>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</LinearLayout>