<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <RelativeLayout
                    android:id="@+id/rela1"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="20sp"
                    android:background="#00767A">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="150sp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="26sp" />

                    <RelativeLayout
                        android:id="@+id/rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="150sp"
                        android:layout_below="@+id/text1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5sp"
                            android:layout_toLeftOf="@+id/text3"
                            android:text="Rating: "
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5sp"
                            android:layout_toLeftOf="@+id/text2"
                            android:background="@drawable/starnew" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    android:layout_marginLeft="20sp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY"
                        android:padding="4dp"
                        android:src="@drawable/default_profile"
                        android:background="@drawable/image_border" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:background="#B4A054">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#000000"/>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:text="COMMENTS!"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15sp"
                    android:text="Be Honest, Be Respectful, Be Professional"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="16sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220sp"
                android:background="@drawable/two_colors">

                <EditText
                    android:id="@+id/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:layout_alignParentRight="true"
                    android:padding="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="25sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:gravity="top"
                    android:background="@drawable/border"
                    android:hint="Explain why the job was canceled"
                    android:paddingLeft="15sp" />

            </RelativeLayout>

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="THANK YOU!"
                    android:paddingBottom="5sp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:background="#ACACAB"
                    android:textColor="#000000"
                    android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:background="#B4A054">

                <RelativeLayout
                    android:id="@+id/lay1"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="#2B8377">

                    <ImageView
                        android:id="@+id/handz_logo"
                        android:layout_width="160sp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/handz_text"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="30sp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="50sp"
                    android:layout_centerVertical="true"
                    android:layout_height="50sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30sp"
                    android:src="@drawable/back_img" />

                <Button
                    android:id="@+id/next1"
                    android:layout_width="130sp"
                    android:layout_height="50sp"
                    android:background="@drawable/border_gray"
                    android:text="POST"
                    android:textAllCaps="true"
                    android:layout_centerInParent="true"
                    android:textColor="#DCDCDC"
                    android:textSize="24sp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    </FrameLayout>

</LinearLayout>