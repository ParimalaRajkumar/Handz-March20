<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d4d4d">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/relay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#AB954C"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="step 1"
                android:textSize="28sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#DCDCDC"
                android:background="#4D4D4D"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#AB954C"/>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_below="@+id/descrip"
                android:background="#4D4D4D"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_category"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="10sp"
                    android:visibility="gone"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/cat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Job Category"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:layout_marginLeft="15sp"
                    android:textStyle="bold|italic"
                    android:layout_gravity="center"
                    android:textColor="#DCDCDC" />

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="10sp"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_right" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#AB954C"/>

            <LinearLayout
                android:id="@+id/lay"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:orientation="vertical"
                android:layout_below="@+id/rela1"
                android:gravity="center"
                android:paddingBottom="5sp"
                android:background="#34887B">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkBox1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:text="OR"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_marginTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Include All Available Jobs"
                    android:textSize="18sp"
                    android:paddingLeft="10sp"
                    android:button="@drawable/custom_checkbox"
                    android:gravity="center_vertical"
                    android:textAllCaps="false"
                    android:textColor="#000000"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:background="#AB954C"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="step 2"
                android:textSize="28sp"
                android:layout_below="@+id/lay"
                android:textAllCaps="true"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#DCDCDC"
                android:background="#4D4D4D"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:background="#AB954C"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/zip"
                    android:layout_marginLeft="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:textSize="16sp"
                    android:textColorHint="#000000"
                    android:layout_below="@+id/text2"
                    android:layout_marginRight="20sp"
                    android:hint="Search by Zip Code...."
                    android:paddingLeft="10sp"
                    android:background="@drawable/shape" />

            </LinearLayout>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="step 3"
                android:textSize="28sp"
                android:layout_below="@+id/zip"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#DCDCDC"
                android:background="#4D4D4D"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#AB954C"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/radius"
                    android:layout_marginLeft="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:textSize="16sp"
                    android:layout_marginTop="15sp"
                    android:textColorHint="#000000"
                    android:layout_marginRight="20sp"
                    android:hint="Type in Search Radius (Max 25 Miles)...."
                    android:paddingLeft="10sp"
                    android:background="@drawable/shape" />

            </LinearLayout>
            <ImageView
                android:id="@+id/logo"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginLeft="50sp"
                android:visibility="visible"
                android:layout_alignParentLeft="true"
                android:background="@drawable/logo"
                android:layout_marginTop="-40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
            </ImageView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4D4D4D">


                <Button
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textAllCaps="true"
                    android:padding="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/border_gray"
                    android:textColor="#DCDCDC"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/handz"/>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>