<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="520dp"
    android:layout_gravity="bottom|center"
    android:orientation="vertical"
    android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120sp"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:background="#AE944F"
        android:gravity="top">

            <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Current Address"
            android:textSize="22sp"
            android:textAllCaps="true"
                android:textStyle="bold"
            android:gravity="center"
            android:textColor="#DCDCDC"
            android:background="#4D4D4D"
            android:layout_marginTop="60sp"/>

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_below="@+id/text1"
                android:orientation="vertical"
                android:layout_marginTop="20sp"
                android:background="#29988E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/old_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/old_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000000"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                <TextView
                    android:id="@+id/old_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5sp" />

                <TextView
                    android:id="@+id/old_zip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5sp"/>

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/addr1"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp"
                android:paddingLeft="12sp"
                android:layout_below="@+id/lay1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Street Address Line 1"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/addr2"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp"
                android:paddingLeft="12sp"
                android:layout_below="@+id/addr1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Street Address Line 2"
                android:background="@drawable/white_edit_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/addr2"
                android:weightSum="3">

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:paddingLeft="12sp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="City or Town"
                    android:layout_weight="1"
                    android:background="@drawable/white_edit_bg"/>

                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:paddingLeft="12sp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="ST"
                    android:background="@drawable/white_edit_bg"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="20sp"
                    android:paddingLeft="12sp"
                    android:paddingRight="5sp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="ZipCode"
                    android:inputType="number"
                    android:background="@drawable/white_edit_bg"
                    android:layout_weight="1" />

            </LinearLayout>

    </RelativeLayout>

    <ImageView
            android:id="@+id/logo"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="6sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>

    </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_marginLeft="5sp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/handz"
                    android:id="@+id/textView" />

                <Button
                    android:id="@+id/update"
                    android:layout_width="70sp"
                    android:layout_height="45sp"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="true"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/update"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="update"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_below="@+id/update"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="7sp"
                    android:textColor="#DCDCDC" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>