<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F03B40"
        android:orientation="vertical"
        android:clickable="true"
        android:id="@+id/layout_refuse"
        android:layout_weight="0.01">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp">

           <!-- <ImageView
                android:id="@+id/widget_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:adjustViewBounds="true"
                android:background="@drawable/refuse_smiley" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="so sorry,but unfortunately you didn't "
                android:textAllCaps="true"
                android:layout_marginLeft="10sp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!--<ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20sp"
                android:adjustViewBounds="true"
                android:background="@drawable/refuse_smiley" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34sp"
                android:text="get the job;(never give up and keep on"
                android:layout_marginLeft="10sp"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/widget_title_icon"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="53sp"
                android:layout_toRightOf="@+id/widget_title_icon"
                android:text="looking!"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="74sp"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/widget_title_icon"
                android:text="you 'll find the right job soon. -handz"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="click this box to remove  the job from"
                android:textAllCaps="true"
                android:layout_below="@+id/textView3"
                android:textColor="#000000"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="your profile."
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:layout_below="@+id/textView4"
                android:textColor="#000000"
                android:layout_marginLeft="10sp"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>