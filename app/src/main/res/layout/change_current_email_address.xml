<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4D4D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="570dp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100sp"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:background="#AE944F"
        android:gravity="top">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Current Email Address"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#DCDCDC"
                android:background="#4D4D4D"
                android:layout_marginTop="70sp"/>


            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/text1"
                android:gravity="center"
                android:background="#29988E">


                <TextView
                    android:id="@+id/old_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                </LinearLayout>

            <EditText
                android:id="@+id/email1"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:paddingLeft="12sp"
                android:layout_below="@+id/lay1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Email Address"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/retype1"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:paddingLeft="12sp"
                android:textSize="16sp"
                android:layout_below="@+id/email1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Re-type Email Address"
                android:background="@drawable/white_edit_bg"/>


        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Current Password"
            android:textSize="22sp"
            android:layout_below="@+id/retype1"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="#DCDCDC"
            android:textStyle="bold"
            android:background="#4D4D4D"
            android:layout_marginTop="10sp"/>

        <EditText
            android:id="@+id/pass1"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:paddingLeft="12sp"
            android:layout_below="@+id/text2"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:hint="Password(8-30 Character...)"
            android:background="@drawable/white_edit_bg"/>


        <EditText
            android:id="@+id/retype_pass"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:paddingLeft="12sp"
            android:textSize="16sp"
            android:layout_below="@+id/pass1"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:hint="Re-type Password"
            android:background="@drawable/white_edit_bg"/>


    </RelativeLayout>



    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </ImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_width="120sp"
                        android:layout_height="40sp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/handz"
                        android:id="@+id/textView" />

                    <Button
                        android:id="@+id/update"
                        android:layout_width="70sp"
                        android:layout_height="45sp"
                        android:layout_alignParentRight="true"
                        android:textAllCaps="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/update"
                        android:textColor="#000000" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="update"
                android:layout_alignParentBottom="true"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginRight="5sp"
                android:textColor="#DCDCDC"
                android:layout_gravity="right"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>