<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#3B3B3B"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10sp"
                android:background="#9A9999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="#BEBEBE"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:text="Link your paypal account"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="24sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5sp"
                android:background="#9A9999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:background="#9A9999">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:src="@drawable/paypal_small"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:background="#BFE8C64B"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/new_employee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up or login"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginLeft="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:textSize="18sp"
                    android:layout_marginTop="5sp"
                    android:textColorHint="#000000"
                    android:hint="Enter an email address"
                    android:paddingLeft="15sp"
                    android:background="@drawable/shape" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select a country"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginLeft="12sp"
                    android:textColor="#000000"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center" />

                <EditText
                    android:hint="United States"
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:textSize="18sp"
                    android:textColorHint="#000000"
                    android:inputType="textPassword"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="15sp"
                    android:background="@drawable/shape" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="#BEBEBE"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:text="Handz for Hire has a partnership with Paypal so you \n can easily send or receive money via Paypal. You will \n never be charged by Handz unless you authorize it! \n By clicking next, you will now be directed to Paypal \n to complete your Handz for Hire registration. "
                android:textStyle="italic"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="10sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/handz"/>

    <Button
        android:id="@+id/next1"
        android:layout_width="50sp"
        android:layout_height="40sp"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10sp"
        android:background="@drawable/next_arrow"
        android:layout_gravity="right"
        android:layout_marginRight="15sp"/>

</RelativeLayout>