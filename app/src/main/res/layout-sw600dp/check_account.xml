<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90sp"
            android:layout_marginRight="90sp"
            android:layout_marginTop="90sp"
            android:layout_marginBottom="90sp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="590sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100sp"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:background="#BFE8C64B"
        android:gravity="top">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Add a Checking Account"
                android:textSize="22sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#DCDCDC"
                android:background="#3B3B3B"
                android:gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="60sp"/>

            <EditText
                android:id="@+id/ac_name"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="12sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="15sp"
                android:layout_below="@+id/text1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Name on Account"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/brn"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingLeft="12sp"
                android:textSize="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:layout_below="@+id/ac_name"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Bank Routing Number"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/ac_no"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingLeft="12sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:textSize="16sp"
                android:layout_below="@+id/brn"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Checking Account Number"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/re_ac_no"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingLeft="12sp"
                android:textSize="16sp"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/ac_no"
                android:layout_marginRight="10sp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Re-enter Checking Account Number"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/lic_no"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:paddingLeft="12sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@+id/re_ac_no"
                android:layout_marginTop="10sp"
                android:textColorHint="#000000"
                android:hint="Driver License Number"
                android:background="@drawable/white_edit_bg"/>

            <EditText
                android:id="@+id/sel_state"
                android:layout_width="150sp"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_below="@+id/lic_no"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="Select State"
                android:background="@drawable/white_edit_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/sel_state"
                android:layout_marginTop="10sp"
                android:background="#BF178487">

                <CheckBox
                    android:id="@+id/default_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make this my default account"
                    android:textSize="18sp"
                    android:paddingLeft="10sp"
                    android:button="@drawable/custom_checkbox"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textColor="#000000"/>

            </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </ImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/add_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_gray"
                        android:text="APPLY"
                        android:padding="10sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#DCDCDC"
                        android:textSize="24sp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

                </RelativeLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>
