<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#3B3B3B"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90sp"
            android:layout_marginRight="90sp"
            android:layout_marginBottom="90sp"
            android:layout_marginTop="90sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:layout_marginTop="60sp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="40sp"
                android:textSize="18sp"
                android:textColorHint="#000000"
                android:hint="Email"
                android:paddingLeft="10sp"
                android:background="@drawable/shape" />

            <EditText
                android:hint="Password"
                android:id="@+id/login_pass"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:textSize="18sp"
                android:textColorHint="#000000"
                android:inputType="textPassword"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:paddingLeft="10sp"
                android:background="@drawable/shape" />

            <Button
                android:id="@+id/login"
                android:layout_width="200sp"
                android:layout_height="70sp"
                android:layout_gravity="center"
                android:background="@drawable/border_gray"
                android:layout_marginTop="20sp"
                android:textColor="#9A9999"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:text="LOG IN"
                android:textStyle="bold"
                android:textSize="32sp"
                android:layout_marginBottom="20sp" />


            <TextView
                android:id="@+id/new_employee"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="New to Handz? Sign Up!"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="28sp"
                android:textAllCaps="true"
                android:background="#BFE8C64B"
                android:textColor="#000000"
                android:layout_marginTop="5sp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Forgot Password?"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="28sp"
                android:textAllCaps="true"
                android:layout_marginBottom="30sp"
                android:background="#BF178487"
                android:textColor="#000000"
                android:layout_gravity="center" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/handz"/>

</RelativeLayout>