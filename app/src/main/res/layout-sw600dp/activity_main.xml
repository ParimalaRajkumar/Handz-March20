<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3B3B3B"
    tools:context="com.example.iz_test.handzforhire.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="90sp"
            android:layout_marginRight="90sp"
            android:layout_marginBottom="90sp"
            android:baselineAligned="false"
            android:layout_marginTop="90sp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="140sp"
                android:layout_height="140sp"
                android:layout_gravity="center"
                android:background="@drawable/logo" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:id="@+id/get_handz"
                android:text="NEED A HAND"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="46sp"
                android:layout_marginTop="20sp"
                android:background="#F2CF6B"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:id="@+id/give_handz"
                android:text="LEND A HAND"
                android:layout_marginTop="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="46sp"
                android:gravity="center"
                android:background="#008A8E"/>

            <LinearLayout
                android:id="@+id/promo_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/border_gray"
                android:layout_marginTop="30sp">

                <ImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/question"/>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is Handz?"
                    android:textSize="22sp"
                    android:paddingLeft="10sp"
                    android:textStyle="bold"
                    android:paddingRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="#DCDCDC" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="35sp"
                android:background="#9A9999"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textColor="#DCDCDC" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="30sp"
               android:background="#9A9999"/>


        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:background="@drawable/handz"/>

</RelativeLayout>


