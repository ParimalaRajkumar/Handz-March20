<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/relay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90sp"
            android:layout_marginTop="90sp"
            android:layout_marginRight="90sp"
            android:layout_marginBottom="90sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="#BFE8C64B"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="step 1"
                android:textSize="28sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#DCDCDC"
                android:background="#3B3B3B"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#BFE8C64B"/>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_below="@+id/descrip"
                android:background="#3B3B3B"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_category"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="10sp"
                    android:visibility="gone"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/cat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Job Category"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:layout_marginLeft="15sp"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:textColor="#DCDCDC" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_right" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:background="#BFE8C64B"/>

            <LinearLayout
                android:id="@+id/lay"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:orientation="vertical"
                android:layout_below="@+id/rela1"
                android:gravity="center"
                android:paddingBottom="5sp"
                android:background="#BF178487">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkBox1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:text="OR"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:gravity="center"/>

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_marginTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Include All Available Jobs"
                    android:textSize="22sp"
                    android:paddingLeft="10sp"
                    android:button="@drawable/custom_checkbox"
                    android:gravity="center_vertical"
                    android:textAllCaps="false"
                    android:textColor="#000000"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:background="#BFE8C64B"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="step 2"
                android:textSize="28sp"
                android:layout_below="@+id/lay"
                android:textAllCaps="true"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#DCDCDC"
                android:background="#3B3B3B"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:background="#BFE8C64B"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/zip"
                    android:layout_marginLeft="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:textSize="16sp"
                    android:textColorHint="#000000"
                    android:layout_below="@+id/text2"
                    android:layout_marginRight="20sp"
                    android:hint="Search by Zip Code...."
                    android:paddingLeft="10sp"
                    android:background="@drawable/shape" />

            </LinearLayout>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="step 3"
                android:textSize="28sp"
                android:layout_below="@+id/zip"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#DCDCDC"
                android:background="#3B3B3B"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#BFE8C64B"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/radius"
                    android:layout_marginLeft="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:textSize="16sp"
                    android:textColorHint="#000000"
                    android:layout_marginRight="20sp"
                    android:hint="Type in Search Radius (Max 25 Miles)...."
                    android:paddingLeft="10sp"
                    android:background="@drawable/shape" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3B3B3B">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    android:layout_marginLeft="6sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/logo"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>

                <Button
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textAllCaps="true"
                    android:layout_marginTop="10sp"
                    android:padding="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="26sp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/border_gray"
                    android:textColor="#DCDCDC"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_alignParentBottom="true">


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:layout_marginLeft="20sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/handz"/>

</RelativeLayout>