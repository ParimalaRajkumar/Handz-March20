<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="100sp"
            android:layout_marginTop="100sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true">

                    <RelativeLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="130sp"
                        android:layout_gravity="top|center"
                        android:background="#BFE8C64B"
                        android:gravity="top"
                        android:layout_alignTop="@+id/logo"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="70sp">

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MAKE A PAYMENT TO"
                            android:gravity="center"
                            android:layout_marginTop="50sp"
                            android:textColor="#000000"
                            android:textSize="24sp"/>

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#000000"
                            android:layout_below="@+id/txt"
                            android:textSize="24sp"/>

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_marginTop="30sp"
                        android:background="@drawable/logo"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">

                    </ImageView>

                    <RelativeLayout
                        android:id="@+id/re"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:layout_below="@+id/layout"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#178487"
                        android:gravity="right">

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:scaleType="fitXY"
                        android:padding="4dp"
                        android:background="@drawable/image_border"
                        android:layout_alignTop="@+id/imageView1"
                        android:layout_alignLeft="@+id/imageView1"
                        android:layout_alignStart="@+id/imageView1" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:background="@drawable/image_border"
                        android:layout_marginTop="30dp"
                        android:visibility="invisible"
                        android:layout_below="@+id/layout"
                        android:layout_centerHorizontal="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/re">


                        <Button
                            android:id="@+id/pe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/re"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/border_gray"
                            android:layout_gravity="center"
                            android:text="pay employee"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:textStyle="bold"
                            android:padding="20sp"
                            android:layout_marginTop="70sp"
                            android:textAllCaps="true"
                            android:textColor="#DCDCDC"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/cpa"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="0.15"
                            android:visibility="gone"
                            android:background="@drawable/green_btn_bg"
                            android:gravity="center"
                            android:text="completed payment\nalready"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:layout_below="@+id/pe"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Note - Once You submit a payment\nor cancel a job, you and Ee both receive a notification and this this job archived in your job History."
                            android:layout_marginTop="10sp"
                            android:gravity="center_horizontal"
                            android:textSize="18sp"
                            />
                        <TextView
                            android:id="@+id/jwc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Was the Job\n Cancelled?"
                            android:textAllCaps="true"
                            android:padding="10sp"
                            android:background="@drawable/border_gray"
                            android:textSize="20sp"
                            android:textColor="#DCDCDC"
                            android:layout_gravity="right"
                            android:layout_marginRight="15sp"
                            android:layout_marginTop="20sp"
                            />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_marginTop="50sp"
                android:layout_alignParentBottom="true">



            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/handz"/>
</RelativeLayout>
