<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#3B3B3B"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90sp"
            android:layout_marginRight="90sp"
            android:layout_marginTop="90sp"
            android:layout_marginBottom="90sp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="50sp"
                    android:layout_centerVertical="true"
                    android:layout_height="50sp"
                    android:layout_marginLeft="30sp"
                    android:src="@drawable/back_img" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10sp"
                android:background="#9A9999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#BEBEBE"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:text="summary of payment details"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9A9999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450sp"
                android:layout_marginTop="10sp"
                android:background="#BFE8C64B"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="26sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <EditText
                        android:id="@+id/hourly_text"
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:textSize="20sp"
                        android:paddingLeft="10sp"
                        android:inputType="number"
                        android:background="@drawable/shape"
                        android:textStyle="bold|italic"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hourly Wage"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:textSize="26sp"
                        android:text="*"
                        android:textStyle="bold|italic"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <EditText
                        android:id="@+id/expected_text"
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:textSize="20sp"
                        android:background="@drawable/shape"
                        android:textStyle="bold|italic"
                        android:inputType="number"
                        android:paddingLeft="10sp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="5sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expected Hours"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="26sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/ajp"
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:textSize="26sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out of Pocket \nExpense"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="36sp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />


                    <TextView
                        android:layout_width="70sp"
                        android:layout_height="30sp"
                        android:text="1.00"
                        android:textSize="22sp"
                        android:background="@null"
                        android:textStyle="italic"
                        android:textAllCaps="true"
                        android:layout_marginLeft="10sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Handz for Hire Flat \nService Fee"
                        android:textSize="18sp"
                        android:layout_marginLeft="10sp"
                        android:textStyle="italic"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="36sp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="22sp"
                        android:textAllCaps="true"
                        android:textStyle="bold|italic"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />


                    <TextView
                        android:id="@+id/pmpf"
                        android:layout_width="70sp"
                        android:layout_height="30sp"
                        android:textSize="22sp"
                        android:layout_marginLeft="10sp"
                        android:background="@null"
                        android:textStyle="italic"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paypal Merchant \nProcessing Fee"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="10sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_centerVertical="true"
                        android:layout_height="30sp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/info_icon" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="20sp"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="24sp"
                        android:textAllCaps="true"
                        android:textStyle="bold|italic"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/ope"
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:textSize="26sp"
                        android:background="@null"
                        android:textStyle="bold|italic"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advertised \nJob Payout"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You may adjust your pricing above or know that you can add a tip at the time of payment.No money will be charged or transferred until you authorize it at the time of payment."
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/create_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5sp"
                android:textColor="#BEBEBE"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:paddingBottom="5sp"
                android:layout_marginTop="10sp"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/border_gray"
                android:paddingTop="5sp"
                android:text="create this job"
                android:textStyle="bold"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5sp"
                android:textColor="#BEBEBE"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:visibility="invisible"
                android:paddingBottom="5sp"
                android:layout_marginTop="10sp"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/border_gray"
                android:paddingTop="5sp"
                android:text="Edit this job"
                android:textStyle="bold"
                android:textSize="26sp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>