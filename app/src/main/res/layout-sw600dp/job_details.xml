<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90sp"
            android:layout_marginRight="90sp"
            android:layout_marginTop="90sp"
            android:layout_marginBottom="90sp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="700sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="90sp"
                    android:background="#BFE8C64B"
                    android:gravity="top">

                    <RelativeLayout
                        android:id="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <RelativeLayout
                            android:id="@+id/rela1"
                            android:layout_width="match_parent"
                            android:layout_height="120sp"
                            android:background="#178487">

                            <LinearLayout
                                android:id="@+id/lay2"
                                android:layout_width="wrap_content"
                                android:layout_height="50sp"
                                android:gravity="right"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10sp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/text1"
                                    android:layout_width="180dp"
                                    android:layout_height="40sp"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:layout_weight="0.66" />

                                <ImageView
                                    android:id="@+id/close_btn"
                                    android:layout_width="50sp"
                                    android:layout_height="50sp"
                                    android:layout_marginLeft="5sp"
                                    android:layout_marginRight="10sp"
                                    android:layout_toRightOf="@+id/text1"
                                    android:background="@drawable/exit_close_btn" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="30sp">

                            <ImageView
                                android:id="@+id/profile_image"
                                android:layout_width="120sp"
                                android:layout_height="120sp"
                                android:layout_alignParentTop="true"
                                android:scaleType="fitXY"
                                android:padding="4dp"
                                android:src="@drawable/default_profile"
                                android:background="@drawable/image_border"/>

                            <ImageView
                                android:id="@+id/pro"
                                android:layout_width="120sp"
                                android:layout_height="120sp"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/image_border" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_toRightOf="@id/pro"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="30sp"
                                android:layout_marginRight="50sp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/im"
                                    android:layout_width="55sp"
                                    android:layout_height="55sp"
                                    android:background="@drawable/starnew" />

                                <TextView
                                    android:id="@+id/text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10sp"
                                    android:layout_toRightOf="@+id/im"
                                    android:text="Rating: "
                                    android:layout_marginLeft="10sp"
                                    android:textColor="#000000"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/text3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/text2"
                                    android:layout_centerVertical="true"
                                    android:textColor="#000000"
                                    android:textSize="28sp" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/job_name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relay"
                            android:gravity="center"
                            android:paddingTop="10sp"
                            android:textColor="#000000"
                            android:layout_marginLeft="20sp"
                            android:textStyle="bold"
                            android:textSize="26sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#3B3B3B"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_below="@+id/r1">

                        <TextView
                            android:id="@+id/description_text"
                            android:layout_width="match_parent"
                            android:layout_height="220sp"
                            android:padding="220sp"
                            android:scrollbars="vertical"
                            android:textColor="#DCDCDC"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:text="when :"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="18sp">


                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l1"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:text="Expected duration :"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l3"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_below="@+id/l2"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10sp"
                            android:layout_marginLeft="20sp"
                            android:text="pay :"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15sp"
                            android:text="$"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="18sp" />


                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>