<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF1919"
        android:orientation="vertical"
        android:clickable="true"
        android:id="@+id/layout_refuse"
        android:layout_weight="0.01">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp">

            <ImageView
                android:id="@+id/widget_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22sp"
                android:adjustViewBounds="true"
                android:background="@drawable/refuse_smiley" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100sp"
                android:layout_marginTop="10sp"
                android:text="so sorry ! !"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="22sp"
                android:adjustViewBounds="true"
                android:background="@drawable/refuse_smiley" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:text="unfortunately"
                android:layout_marginLeft="120sp"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/widget_title_icon"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="70sp"
                android:layout_toRightOf="@+id/widget_title_icon"
                android:text="you didn't get the job"
                android:textAllCaps="true"
                android:layout_marginLeft="80sp"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="100sp"
                android:layout_toRightOf="@+id/widget_title_icon"
                android:text="never give up! keep trying!"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="click this box to remove  this job"
                android:textAllCaps="true"
                android:layout_below="@+id/textView3"
                android:textColor="#000000"
                android:layout_marginLeft="70sp"
                android:layout_marginTop="10sp"
                android:textSize="22sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>