<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90sp"
            android:layout_marginRight="90sp"
            android:layout_marginBottom="90sp"
            android:layout_marginTop="90sp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="730sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/back_img" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="150sp"
                    android:background="#BFE8C64B"
                    android:gravity="top">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="65sp"
                        android:text="Your newly created job :"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/bt1"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_below="@+id/text1"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:background="#3B3B3B"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#DCDCDC"
                        android:textSize="22sp" />

                    <RelativeLayout
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bt1"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="true">

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="12sp"
                            android:layout_marginTop="10sp"
                            android:layout_weight="1"
                            android:background="@drawable/shape"
                            android:hint="Address of Job Site"
                            android:paddingLeft="12sp"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/address"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <EditText
                                android:id="@+id/city"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:layout_marginLeft="12sp"
                                android:layout_weight="1"
                                android:background="@drawable/shape"
                                android:hint="City or Town"
                                android:paddingLeft="12sp"
                                android:textColor="#000000"
                                android:textColorHint="#000000"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/state"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1"
                                android:background="@drawable/shape"
                                android:hint="ST"
                                android:paddingLeft="12sp"
                                android:textColor="#000000"
                                android:textColorHint="#000000"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/zipcode"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="12sp"
                                android:layout_weight="1"
                                android:background="@drawable/shape"
                                android:hint="ZipCode"
                                android:inputType="number"
                                android:paddingLeft="12sp"
                                android:paddingRight="5sp"
                                android:textColor="#000000"
                                android:textColorHint="#000000"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lay"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_below="@+id/layout2"
                        android:layout_marginTop="15sp"
                        android:background="#BF178487"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/checkBox1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:text="OR"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/checkBox1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:button="@drawable/custom_checkbox"
                            android:gravity="center_vertical"
                            android:paddingLeft="10sp"
                            android:text="Use Current Location"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160sp"
                        android:layout_below="@+id/lay"
                        android:layout_gravity="center"
                        android:layout_marginTop="15sp"
                        android:background="#3B3B3B"
                        android:gravity="center"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/checkBox2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15sp"
                            android:layout_marginRight="10sp"
                            android:button="@drawable/custom_checkbox"
                            android:paddingLeft="5sp"
                            android:text=" I would like to post my work site\n address for the particular job."
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/features"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/checkBox2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:text="NOT SURE?"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/features"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/pros"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="PROS"
                                android:textColor="#138083"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/cons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="CONS"
                                android:textColor="#E8C64B"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="6sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/logo"></ImageView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/next"
                    android:layout_width="65sp"
                    android:layout_height="65sp"
                    android:textAllCaps="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/next_arrow"
                    android:layout_gravity="right"
                    android:layout_marginRight="15sp"/>`

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="140sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20sp"
        android:background="@drawable/handz"/>

</RelativeLayout>