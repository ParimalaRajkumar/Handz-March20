<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/job_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:visibility="gone"
                android:text="jhgjhkj"
                android:layout_marginLeft="10sp"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/re2"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"
                        android:padding="4dp"
                        android:src="@drawable/default_profile"
                        android:background="@drawable/image_border" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:layout_marginTop="5sp">

                    <TextView
                        android:id="@+id/job_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:textSize="20sp"/>

                    <LinearLayout
                        android:id="@+id/lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/job_name_text"
                        android:layout_marginTop="5sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/employer_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textAllCaps="true"
                                android:textColor="#000000"
                                android:visibility="gone"
                                android:textSize="20sp" />
                            <TextView
                                android:id="@+id/employee_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textAllCaps="true"
                                android:textColor="#000000"
                                android:visibility="gone"
                                android:textSize="20sp" />
                            <TextView
                                android:id="@+id/image1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textAllCaps="true"
                                android:textColor="#000000"
                                android:visibility="gone"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="when:"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginLeft="10sp"
                            android:textSize="18sp"
                            android:textAllCaps="true"/>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"

                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=","
                            android:visibility="invisible"
                            android:textColor="#000000"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="10sp"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=","
                            android:textColor="#000000"
                            android:visibility="invisible"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="10sp"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/lay"
                        android:layout_marginTop="5sp">

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pay:"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginLeft="10sp"
                            android:layout_marginBottom="10sp"
                            android:textSize="18sp"
                            android:textAllCaps="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textColor="#000000"
                            android:layout_marginLeft="20sp"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/text7"
                            android:layout_width="wrap_content"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=","
                            android:textColor="#000000"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/text8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_marginLeft="10sp"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="65sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:background="@drawable/gray_box"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp"
                    android:text="job\ndetails"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/lay1"
                    android:layout_width="wrap_content"
                    android:layout_height="65sp"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_box"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/red1"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:background="@drawable/circle_shape"
                            android:textColor="#ffffff"
                            android:visibility="invisible"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="40sp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/icon__chat"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="10sp"
                        android:text="message"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:layout_marginTop="-5sp"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="65sp"
                    android:layout_weight="1"
                    android:id="@+id/lay2"
                    android:layout_marginLeft="20sp"
                    android:background="@drawable/gray_box"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/red2"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:background="@drawable/circle_shape"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:visibility="invisible"
                            android:textStyle="bold"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" request\n payment"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="-15sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="2sp"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5sp"
                android:background="#000000"/>


        </LinearLayout>

    </LinearLayout>