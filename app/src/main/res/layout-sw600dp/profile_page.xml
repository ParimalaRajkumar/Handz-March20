<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70sp"
            android:layout_marginLeft="70sp"
            android:layout_marginRight="70sp"
            android:layout_marginTop="70sp"
            android:orientation="vertical">

            <include
                layout="@layout/progressbar"
                android:gravity="center"
                android:visibility="gone">

            </include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <RelativeLayout
                    android:id="@+id/rela1"
                    android:layout_width="match_parent"
                    android:layout_height="170sp"
                    android:layout_marginTop="10sp"
                    android:background="#BF178487">

                    <RelativeLayout
                        android:id="@+id/relay"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10sp">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="130sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20sp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="26sp" />

                        <ImageView
                            android:id="@+id/menu"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_marginRight="20sp"
                            android:layout_marginTop="20sp"
                            android:layout_toRightOf="@+id/text1"
                            android:background="@drawable/menu" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relay"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="50sp">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating: "
                            android:textStyle="italic"
                            android:layout_toLeftOf="@+id/text3"
                            android:layout_marginRight="5sp"
                            android:textSize="30sp"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"/>

                        <ImageView
                            android:layout_width="55sp"
                            android:layout_height="55sp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10sp"
                            android:layout_toLeftOf="@+id/text2"
                            android:background="@drawable/starnew"/>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="160sp"
                        android:layout_height="160sp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/image_border"
                        android:padding="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_profile" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:text="need a hand"
                android:textAllCaps="true"
                android:textSize="38sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/create_job"
                        android:layout_width="130sp"
                        android:layout_height="130sp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/create_job"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5sp"
                        android:text="create a job"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:gravity="center">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/edit_posted_job"
                            android:layout_width="130sp"
                            android:layout_height="130sp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/edit_job"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edit_posted_job"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5sp"
                            android:text="edit a job"
                            android:textAllCaps="true"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/posted_job"
                        android:layout_width="130sp"
                        android:layout_height="130dp"
                        android:background="@drawable/posted_jobs"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_postedjobcnt"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/circle_shape"
                                android:gravity="center"
                                android:textColor="#ffffff"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="invisible" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="posted jobs"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="130sp"
                        android:layout_height="130sp"
                        android:layout_gravity="center"
                        android:background="@drawable/logo" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/active_job"
                        android:layout_width="130sp"
                        android:layout_height="130sp"
                        android:layout_weight="1"
                        android:background="@drawable/active_jobs"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_activejobscnt"
                                android:layout_width="35sp"
                                android:layout_height="35sp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/circle_shape"
                                android:gravity="center"
                                android:textColor="#ffffff"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="invisible" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/active_job"
                        android:layout_marginTop="5sp"
                        android:text="active jobs"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/job_history"
                        android:layout_width="130sp"
                        android:layout_height="130sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/job_history"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/job_historycnt"
                                android:layout_width="35sp"
                                android:layout_height="35sp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/circle_shape"
                                android:gravity="center"
                                android:textColor="#ffffff"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="invisible" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5sp"
                        android:text="job history"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/edit_user_profile"
                            android:layout_width="130sp"
                            android:layout_height="130sp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/edit_user"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edit_user_profile"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5sp"
                            android:text="edit user profile"
                            android:textAllCaps="true"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp">

                <RelativeLayout
                    android:id="@+id/tutorial_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="30sp">

                    <ImageView
                        android:id="@+id/tutorial"
                        android:layout_width="65sp"
                        android:layout_height="65sp"
                        android:gravity="center"
                        android:src="@drawable/tutorial_image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tutorial"
                        android:text="tutorial"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <Button
                    android:id="@+id/need_help"
                    android:layout_width="65sp"
                    android:layout_height="65sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/bulb" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="30sp">

                    <ImageView
                        android:id="@+id/sha_need"
                        android:layout_width="65sp"
                        android:layout_height="65sp"
                        android:src="@drawable/share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sha_need"
                        android:layout_centerHorizontal="true"
                        android:text="share"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tex1"
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="-60sp"
        android:background="@drawable/handz"/>

</LinearLayout>
