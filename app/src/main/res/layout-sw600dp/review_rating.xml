<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150sp"
    android:orientation="vertical"
    android:layout_marginLeft="90sp"
    android:layout_marginRight="90sp"
    android:layout_marginTop="90sp"
    android:background="#3B3B3B">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp" >

        <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ratings for "
        android:textColor="#DCDCDC"
            android:textStyle="bold"
        android:layout_marginLeft="20sp"
        android:textAllCaps="false"
            android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>


        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="#DCDCDC"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/t1"
            />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/x_button"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela1"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="180sp"
            android:layout_height="40sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="overall average"
            android:textAllCaps="true"
            android:layout_marginRight="20sp"
            android:textSize="16sp"
            android:textColor="#DCDCDC" />

        <RelativeLayout
            android:id="@+id/rr"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:gravity="center"
            android:layout_marginRight="20sp">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: "
                android:textStyle="italic"
                android:layout_toLeftOf="@+id/text3"
                android:layout_marginRight="5sp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:textColor="#DCDCDC"/>

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="10sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/text2"
                android:background="@drawable/starnew"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#DCDCDC"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="20sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

           <ImageView
                android:id="@+id/profile_image"
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:layout_alignParentTop="true"
                android:background="@drawable/image_border"
               android:src="@drawable/default_profile"
               android:padding="4dp"
                android:scaleType="fitCenter"
                android:layerType="software"  />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="90sp"
        android:layout_marginRight="90sp"
        android:layout_below="@+id/rr"
        android:background="#000000"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_marginRight="90sp"
        android:layout_marginLeft="90sp"
        android:layout_height="480sp">

    </ListView>

    <TextView
        android:layout_marginTop="50sp"
        android:layout_width="120sp"
        android:layout_marginLeft="20sp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/handz"/>

</LinearLayout>