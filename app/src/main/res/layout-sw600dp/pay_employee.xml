<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="90sp"
        android:layout_marginRight="90sp"
        android:layout_marginTop="90sp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="650sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#3B3B3B"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="top|center"
                android:layout_marginTop="120sp"
                android:background="#BFE8C64B"
                android:gravity="top">


                <RelativeLayout
                    android:id="@+id/re"
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_marginTop="100sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#178487"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:layout_marginLeft="30sp"
                        android:gravity="center_vertical"
                        android:textAllCaps="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="110sp"
                    android:layout_height="110sp"
                    android:layout_marginRight="56dp"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="56dp"
                    android:layout_marginTop="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="110sp"
                    android:layout_height="110sp"
                    android:background="@drawable/image_border"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_alignLeft="@+id/imageView"
                    android:layout_alignStart="@+id/imageView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/re">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="26sp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_weight="1"
                            android:text="Transaction Date :"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_toRightOf="@+id/txt1"
                            android:textSize="20sp"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20sp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Amount :"
                            android:layout_weight="1"
                            android:layout_marginLeft="20sp"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/pay_amount"
                            android:layout_width="match_parent"
                            android:layout_marginRight="20sp"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:paddingLeft="5sp"
                            android:inputType="number"
                            android:drawableLeft="@drawable/dollar20"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:background="@drawable/shape" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20sp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tip(Optional) :"
                            android:textColor="#000000"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_marginLeft="20sp" />

                        <EditText
                            android:id="@+id/tip"
                            android:layout_width="match_parent"
                            android:layout_marginRight="20sp"
                            android:layout_height="40sp"
                            android:paddingLeft="5sp"
                            android:inputType="number"
                            android:textColor="#000000"
                            android:drawableLeft="@drawable/dollar20"
                            android:textColorHint="#000000"
                            android:layout_weight="1"
                            android:background="@drawable/shape" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20sp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Handz Use Fee:"
                            android:textColor="#000000"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_marginLeft="20sp" />

                        <EditText
                            android:id="@+id/pay_method"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:hint="$ 0.50"
                            android:paddingLeft="4sp"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:layout_marginRight="20sp"
                            android:background="@android:color/transparent" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/ree"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:background="#178487"
                    android:layout_marginTop="430sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txx"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Subtotal :"
                            android:textColor="#000000"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:layout_marginLeft="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:layout_marginLeft="10sp"
                            android:textSize="20sp"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:layout_weight="1"
                            android:layout_marginLeft="5sp"
                            android:layout_toRightOf="@+id/txt1"
                            android:textSize="20sp"
                            android:textColor="#000000" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>


            <ImageView
                android:id="@+id/logo"
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="6sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/logo">

            </ImageView>

        </RelativeLayout>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout"
            >

            <Button
                android:id="@+id/next1"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:textAllCaps="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/next_arrow"
                android:layout_gravity="right"
                />

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:layout_marginLeft="20sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/handz"/>

</RelativeLayout>
