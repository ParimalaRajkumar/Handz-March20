<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#3B3B3B"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90sp"
            android:layout_marginRight="90sp"
            android:layout_marginTop="90sp"
            android:layout_marginBottom="90sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10sp"
                android:background="#9A9999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="#BEBEBE"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="summary of payment details"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9A9999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="430sp"
                android:layout_marginTop="10sp"
                android:background="#BFE8C64B"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginLeft="30sp"
                    android:textColor="#000000"
                    android:layout_gravity="center" />

                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:inputType="numberDecimal"
                        android:textStyle="bold|italic"
                        android:textColor="#000000"
                        android:layout_marginLeft="20sp"
                        android:textColorHint="#000000"
                        android:paddingLeft="10sp"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:background="@drawable/shape"
                        android:layout_gravity="center"/>

                   <!-- <EditText
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="22sp"
                        android:background="@null"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:textAllCaps="true"
                        android:layout_marginLeft="30sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hourly Wage"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginLeft="30sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <EditText
                        android:id="@+id/hours"
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:text=""
                        android:textSize="22sp"
                        android:background="@drawable/shape"
                        android:textStyle="bold|italic"                        android:inputType="number"
                        android:paddingLeft="10sp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expected Hours"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"                        android:textAllCaps="false"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10sp"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginLeft="30sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:textSize="22sp"
                        android:background="@null"
                        android:textStyle="bold|italic"
                        android:textAllCaps="true"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="false"
                        android:layout_marginLeft="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We believe in 100% transparency. There will be a $1.00 Handz for Hire service fee and a Paypal Merchant Processing Fee at the time of payment. We are serious about allowing you to name your pricel Choose one of the following two options..."
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/subtract"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:text="subtract the fees from \n the total listed above"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="#3B3B3B"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:textColor="#BEBEBE"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:text="add the fees to the \n total listed above"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="#3B3B3B"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:textColor="#BEBEBE"
                    android:layout_gravity="center" />

            </LinearLayout>

          <!--  <TextView
                android:id="@+id/create_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#BEBEBE"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:paddingBottom="5sp"
                android:layout_marginTop="20sp"
                android:textAllCaps="true"
                android:background="@drawable/border_gray"
                android:paddingTop="5sp"
                android:text="create this job"
                android:textStyle="bold"
                android:textSize="26sp" />-->

        </LinearLayout>

    </ScrollView>

</RelativeLayout>