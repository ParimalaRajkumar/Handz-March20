<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B3B3B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70sp"
            android:layout_marginRight="70sp"
            android:layout_marginTop="70sp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="570sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120sp"
        android:layout_centerInParent="true"
        android:layout_gravity="top|center"
        android:background="#BFE8C64B"
        android:gravity="top">

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="#3B3B3B">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Welcome to the Handz \n Family!"
            android:textColor="#DCDCDC"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20sp">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Thank you for trying us out!"
            android:textColor="#DCDCDC"
            android:textSize="18sp"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:text="Whether you need a hand or are willing \n to lend a hand, we hope you have a \n great experience using our app!"
                android:textColor="#DCDCDC"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:text="Sometimes you just need a hand and sometimes you need job flexibility!"
                android:textColor="#DCDCDC"
                android:textSize="18sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click &quot;Create Profile&quot; to get started!"
            android:textColor="#DCDCDC"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20sp" />

        </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_marginLeft="6sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|center"
            android:gravity="center">

            <Button
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DCDCDC"
                android:background="@drawable/border_gray"
                android:text="Create Profile"
                android:paddingLeft="15sp"
                android:layout_marginTop="20sp"
                android:paddingTop="5sp"
                android:paddingRight="15sp"
                android:paddingBottom="5sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="30sp"/>

        </RelativeLayout>
                </RelativeLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>

